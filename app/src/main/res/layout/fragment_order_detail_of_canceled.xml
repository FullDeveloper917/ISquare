<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.david.isquare.Fragments.MeFragments.MyShopFragments.OrdersFragments.OrderDetailOfCanceledFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58sp"
            android:layout_marginBottom="1sp"
            android:background="@color/colorMyGray_1">

            <LinearLayout
                android:id="@+id/layoutRtn_OrderDetailOfCanceledFrg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="7sp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txtIconRtn_OrderDetailOfCanceledFrg"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:gravity="center"
                    android:text="@string/fa_chevron_left"
                    android:textColor="@color/colorMyDarkBlue"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/order_details"
                    android:textColor="@color/colorMyGray_10"
                    android:textSize="20sp" />
            </LinearLayout>


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorMyGray_2"
                android:orientation="vertical">

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="116sp"
                    android:layout_marginTop="2px"
                    android:background="@color/colorMyWhite">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingBottom="19sp"
                        android:paddingLeft="20sp"
                        android:paddingTop="19dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="left|center"
                                android:text="#45678 | 2 items"
                                android:textColor="@color/colorMyBlack"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="left|center"
                                android:text="12/05/2017"
                                android:textColor="@color/colorMyBlack"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <View
                                    android:layout_width="149sp"
                                    android:layout_height="2px"
                                    android:layout_gravity="bottom"
                                    android:layout_marginBottom="2sp"
                                    android:background="@color/colorMyGray_7" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/txtStatus_OneOrder"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="left|center"
                                android:text="Status: Canceled"
                                android:textColor="@color/colorMyBlack"
                                android:textSize="16sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="62sp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="7sp"
                        android:layout_marginRight="10sp"
                        android:layout_marginTop="19sp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20sp"
                            android:layout_weight="1"
                            android:text="HK$ 900"
                            android:textColor="@color/colorMyBlack"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txtIconStatus_OrderDetailOfCanceledFrg"
                            android:layout_width="45sp"
                            android:layout_height="45sp"
                            android:layout_gravity="right|bottom"
                            android:background="@color/colorMyWhite"
                            android:gravity="center"
                            android:text="@string/fa_ban"
                            android:textColor="@color/colorMyRed"
                            android:textSize="28sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120sp"
                    android:layout_marginTop="2px"
                    android:background="@color/colorMyWhite"
                    android:padding="10sp">

                    <ImageView
                        android:layout_width="120sp"
                        android:layout_height="match_parent"
                        android:background="@color/colorMyGray_7"
                        android:scaleType="centerCrop"
                        android:src="@drawable/raw_1505666211" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingLeft="10sp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20sp"
                            android:gravity="left|center"
                            android:text="Armelle #102"
                            android:textColor="@color/colorMyBlack"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="20sp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="left|center"
                                android:text="Stock: 200"
                                android:textColor="@color/colorMyBlack"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="62sp"
                                android:layout_height="match_parent"
                                android:gravity="left|center"
                                android:text="HK$ 900"
                                android:textColor="@color/colorMyBlack"
                                android:textSize="16sp" />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120sp"
                    android:layout_marginTop="2px"
                    android:background="@color/colorMyWhite"
                    android:padding="10sp">

                    <ImageView
                        android:layout_width="120sp"
                        android:layout_height="match_parent"
                        android:background="@color/colorMyGray_7"
                        android:scaleType="centerCrop"
                        android:src="@drawable/raw_1505666232" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingLeft="10sp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20sp"
                            android:gravity="left|center"
                            android:text="Armelle #102"
                            android:textColor="@color/colorMyBlack"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="20sp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="left|center"
                                android:text="Stock: 200"
                                android:textColor="@color/colorMyBlack"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="62sp"
                                android:layout_height="match_parent"
                                android:gravity="left|center"
                                android:text="HK$ 900"
                                android:textColor="@color/colorMyBlack"
                                android:textSize="16sp" />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="116sp"
                    android:layout_marginTop="2px"
                    android:background="@color/colorMyWhite"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="10sp"
                    android:paddingTop="19sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20sp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="@string/subtotal"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="HK$ 1800"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20sp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="@string/delivery"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Receiver pay"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="149sp"
                        android:layout_height="1px"
                        android:layout_marginBottom="10sp"
                        android:layout_marginTop="10sp"
                        android:background="@color/colorMyGray_10" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20sp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="@string/total"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="HK$ 1800"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="16sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40sp"
                    android:layout_marginTop="38sp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="105sp"
                        android:background="@color/colorMyGray_5"
                        android:paddingBottom="20sp"
                        android:paddingLeft="20dp"
                        android:paddingRight="15sp"
                        android:paddingTop="20sp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="65sp"
                            android:layout_height="match_parent"
                            android:src="@drawable/user_photo_sample" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15sp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="38sp"
                                android:layout_gravity="right"
                                android:gravity="left|center"
                                android:text="Denis Baks"
                                android:textColor="@color/colorMyGray_10"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="27sp"
                                android:layout_marginTop="-6sp"
                                android:gravity="left|center"
                                android:text="ID: 8520000786"
                                android:textColor="@color/colorMyGray_10"
                                android:textSize="14sp" />
                        </LinearLayout>


                        <Button
                            android:id="@+id/btnGoComments_OrderDetailOfCanceledFrg"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="45sp"
                            android:layout_height="45sp"
                            android:layout_marginTop="10sp"
                            android:padding="0sp"
                            android:gravity="center"
                            android:text="@string/fa_comment_o"
                            android:textColor="@color/colorMyRed"
                            android:textSize="24sp" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</FrameLayout>
