 <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.david.isquare.Fragments.MeFragments.MyMomentsFragments.MyMomentsFragment">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="58sp"
             android:layout_marginBottom="1sp"
             android:background="@color/colorMyGray_1">

             <LinearLayout
                 android:id="@+id/layoutRtn_MyMomentsFrg"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_marginLeft="10sp"
                 android:layout_marginTop="7sp"
                 android:layout_weight="1">

                 <TextView
                     android:id="@+id/txtIconRtn_MyMomentsFrg"
                     android:layout_width="45sp"
                     android:layout_height="45sp"
                     android:gravity="center"
                     android:text="@string/fa_chevron_left"
                     android:textColor="@color/colorMyDarkBlue"
                     android:textSize="24sp" />

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:gravity="center"
                     android:text="@string/my_moments"
                     android:textColor="@color/colorMyGray_10"
                     android:textSize="20sp" />
             </LinearLayout>

             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:layout_marginRight="27sp"
                 android:layout_marginTop="7sp"
                 android:gravity="right">

                 <Button
                     android:id="@+id/btnAdd_MyMomentsFrg"
                     style="@style/Widget.AppCompat.Button.Borderless"
                     android:layout_width="45sp"
                     android:layout_height="45sp"
                     android:background="@color/colorMyGray_1"
                     android:gravity="center"
                     android:text="@string/fa_plus"
                     android:textColor="@color/colorMyRed"
                     android:textSize="24sp" />

             </LinearLayout>

         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="45sp"
             android:layout_marginBottom="1sp">

             <Button
                 android:id="@+id/btnGrid_MyMomentsFrg"
                 style="@style/Widget.AppCompat.Button.Borderless"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:background="@color/colorMyWhite"
                 android:gravity="center"
                 android:text="@string/fa_th"
                 android:textColor="@color/colorMyGray_6"
                 android:textSize="24sp" />

             <Button
                 android:id="@+id/btnList_MyMomentsFrg"
                 style="@style/Widget.AppCompat.Button.Borderless"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:background="@color/colorMyWhite"
                 android:gravity="center"
                 android:text="@string/fa_align_justify"
                 android:textColor="@color/colorMyRed"
                 android:textSize="24sp" />

             <Button
                 android:id="@+id/btnStared_MyMomentsFrg"
                 style="@style/Widget.AppCompat.Button.Borderless"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:background="@color/colorMyWhite"
                 android:gravity="center"
                 android:text="@string/fa_star"
                 android:textColor="@color/colorMyGray_6"
                 android:textSize="24sp" />
         </LinearLayout>

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent">

             <ListView
                 android:id="@+id/listMoments_MyMomentsFrg"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:background="@color/colorMyGray_2" />

             <GridView
                 android:id="@+id/gridMoments_MyMomentsFrg"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:background="@color/colorMyGray_2"
                 android:numColumns="3"
                 android:verticalSpacing="3px"
                 android:horizontalSpacing="3px"
                 android:stretchMode="columnWidth"
                 android:gravity="center"
                 android:visibility="gone"/>

         </RelativeLayout>

     </LinearLayout>

 </FrameLayout>
