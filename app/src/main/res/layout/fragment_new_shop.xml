<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMyGray_2"
    tools:context="com.example.david.isquare.Fragments.MeFragments.MyShopFragments.NewShopFragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMyGray_2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58sp"
            android:background="@color/colorMyGray_1"
            android:layout_marginBottom="1sp">

            <LinearLayout
                android:id="@+id/layoutRtn_NewShopFrg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="7sp">

                <TextView
                    android:id="@+id/txtIconRtn_NewShopFrg"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:gravity="center"
                    android:text="@string/fa_chevron_left"
                    android:textColor="@color/colorMyDarkBlue"
                    android:textSize="24sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/create_new_shop"
                    android:textColor="@color/colorMyGray_10"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:orientation="vertical"
            android:background="@color/colorMyGray_2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:background="@color/colorMyWhite"
                android:layout_marginTop="2px">

                <TextView
                    android:id="@+id/txtIconRegion_NewShopFrg"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="8sp"
                    android:layout_marginBottom="7sp"
                    android:text="@string/fa_globe"
                    android:textColor="@color/colorMyGray_4"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:background="@color/colorMyWhite"/>

                <Spinner
                    android:id="@+id/spnRegion_NewShopFrg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="30sp"
                    android:layout_marginTop="15sp"
                    android:layout_marginBottom="15sp"
                    android:background="@color/colorMyWhite"
                    android:textSize="16sp"
                    android:textColor="@color/colorMyGray_4"
                    android:paddingLeft="10sp"
                    android:entries="@array/region_array"
                    android:visibility="visible"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:background="@color/colorMyWhite"
                android:layout_marginTop="2px">

                <TextView
                    android:id="@+id/txtIconState_NewShopFrg"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="8sp"
                    android:layout_marginBottom="7sp"
                    android:text="@string/fa_globe"
                    android:textColor="@color/colorMyGray_4"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:background="@color/colorMyWhite"/>

                <Spinner
                    android:id="@+id/spnSate_NewShopFrg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="30sp"
                    android:layout_marginTop="15sp"
                    android:layout_marginBottom="15sp"
                    android:background="@color/colorMyWhite"
                    android:textSize="16sp"
                    android:textColor="@color/colorMyGray_4"
                    android:paddingLeft="10sp"
                    android:entries="@array/state_array"
                    android:visibility="visible"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorMyGray_2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:background="@color/colorMyWhite"
                android:layout_marginTop="2px">

                <TextView
                    android:id="@+id/txtIconDelivery_NewShopFrg"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="8sp"
                    android:layout_marginBottom="7sp"
                    android:text="@string/fa_truck"
                    android:textColor="@color/colorMyRed"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:background="@color/colorMyWhite"/>

                <Spinner
                    android:id="@+id/spnDelivery_NewShopFrg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="30sp"
                    android:layout_marginTop="15sp"
                    android:layout_marginBottom="15sp"
                    android:background="@color/colorMyWhite"
                    android:textSize="16sp"
                    android:textColor="@color/colorMyGray_4"
                    android:paddingLeft="10sp"
                    android:entries="@array/delivery_array"
                    android:visibility="visible"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="183sp"
                android:paddingLeft="20sp"
                android:paddingTop="17sp"
                android:paddingBottom="30sp"
                android:paddingRight="30sp"
                android:background="@color/colorMyWhite"
                android:layout_marginTop="2px">

                <TextView
                    android:id="@+id/txtIconAddress_NewShopFrg"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:text="@string/fa_map_marker"
                    android:textColor="@color/colorMyGray_4"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:background="@color/colorMyWhite"/>

                <TextView
                    android:id="@+id/txtAddress_NewShopFrg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/sample_address"
                    android:textColor="@color/colorMyGray_8"
                    android:textSize="16sp"
                    android:gravity="left"
                    android:paddingTop="5sp"
                    android:paddingLeft="5sp"
                    android:paddingRight="30sp"
                    android:paddingBottom="30sp"
                    android:background="@color/colorMyWhite"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnStart_NewShopFrg"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:layout_marginBottom="19dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="@string/start"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/red_button_border"
            android:textColor="@color/colorMyWhite"/>

    </android.support.constraint.ConstraintLayout>


</FrameLayout>
