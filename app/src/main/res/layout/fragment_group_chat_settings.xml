<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.david.isquare.Fragments.ChatsFragments.GroupChatSettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorMyGray_2"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58sp"
            android:layout_marginBottom="2px"
            android:background="@color/colorMyGray_1">

            <LinearLayout
                android:id="@+id/layoutRtn_GroupChatSettingsFrg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="9sp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txtIconRtn_GroupChatSettingsFrg"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:gravity="center"
                    android:text="@string/fa_chevron_left"
                    android:textColor="@color/colorMyDarkBlue"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/group_chat_settings"
                    android:textColor="@color/colorMyGray_10"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorMyGray_4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_marginBottom="24sp"
                android:layout_marginTop="2px"
                android:background="@color/colorMyWhite"
                android:paddingBottom="7sp"
                android:paddingLeft="20sp"
                android:paddingRight="10sp"
                android:paddingTop="8sp">

                <TextView
                    android:id="@+id/txtIconName_GroupChatSettingsFrg"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:gravity="center"
                    android:text="@string/fa_info_circle"
                    android:textColor="@color/colorMyRed"
                    android:textSize="24sp" />

                <EditText
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:hint=""
                    android:padding="0sp"
                    android:text="Armelle business"
                    android:textColor="@color/colorMyGray_9"
                    android:textSize="16sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutOnlyWifi_GroupChatSettingsFrg"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_marginTop="2px"
                android:background="@color/colorMyWhite"
                android:paddingBottom="7sp"
                android:paddingLeft="20sp"
                android:paddingRight="10sp"
                android:paddingTop="8sp">

                <TextView
                    android:id="@+id/txtIconMute_GroupChatSettingsFrg"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:gravity="center"
                    android:text="@string/fa_volume_up"
                    android:textColor="@color/colorMyRed"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="@string/mute_notifications"
                    android:textColor="@color/colorMyGray_10"
                    android:textSize="18sp" />

                <ToggleButton
                    android:layout_width="50sp"
                    android:layout_height="30sp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/toggle_selector"
                    android:checked="false"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_marginTop="2px"
                android:background="@color/colorMyWhite"
                android:paddingBottom="7sp"
                android:paddingLeft="20sp"
                android:paddingRight="10sp"
                android:paddingTop="8sp">

                <TextView
                    android:id="@+id/txtIconStickyOnTop_GroupChatSettingsFrg"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:gravity="center"
                    android:text="@string/fa_arrow_circle_o_up"
                    android:textColor="@color/colorMyRed"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="@string/sticky_on_top"
                    android:textColor="@color/colorMyGray_10"
                    android:textSize="18sp" />

                <ToggleButton
                    android:layout_width="50sp"
                    android:layout_height="30sp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/toggle_selector"
                    android:checked="false"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_marginTop="2px"
                android:layout_marginBottom="27sp"
                android:background="@color/colorMyWhite"
                android:paddingBottom="7sp"
                android:paddingLeft="20sp"
                android:paddingRight="10sp"
                android:paddingTop="8sp">

                <TextView
                    android:id="@+id/txtIconOnlyAdmin_GroupChatSettingsFrg"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:gravity="center"
                    android:text="@string/fa_users"
                    android:textColor="@color/colorMyRed"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="@string/only_admin_can_invite"
                    android:textColor="@color/colorMyGray_10"
                    android:textSize="18sp" />

                <ToggleButton
                    android:layout_width="50sp"
                    android:layout_height="30sp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/toggle_selector"
                    android:checked="false"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />

            </LinearLayout>

            <Button
                android:id="@+id/btnLeaveGroupChat_GroupChatSettingsFrg"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="51sp"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:text="@string/leave_group_chat"
                android:textColor="@color/colorMyWhite"
                android:textSize="16sp"
                android:background="@drawable/red_button_border"/>

        </LinearLayout>


    </LinearLayout>

</FrameLayout>
