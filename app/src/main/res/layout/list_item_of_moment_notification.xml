<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63sp"
        android:background="@color/colorMyGray_2">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="44sp"
            android:layout_height="44sp"
            android:layout_marginLeft="10sp"
            android:layout_gravity="left|center"
            android:src="@drawable/raw_1484196915"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="9sp"
            android:text="whatdoublechen"
            android:textColor="@color/colorMyGray_10"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/txtMark_OneMomentNotification"
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:layout_marginRight="17sp"
            android:text="@string/fa_commenting"
            android:textColor="@color/colorMyDarkBlue"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_gravity="center" />

        <ImageView
            android:layout_width="57sp"
            android:layout_height="55sp"
            android:layout_marginRight="10sp"
            android:src="@drawable/raw_1484196731"
            android:layout_gravity="center"/>

    </LinearLayout>


</LinearLayout>