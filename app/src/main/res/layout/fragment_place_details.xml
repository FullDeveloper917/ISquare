<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.david.isquare.Fragments.DirectoriesFragments.PlaceDetailsFragment">

    <LinearLayout
        android:id="@+id/layoutMain_PlaceDetailsFrag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58sp"
            android:layout_marginBottom="1sp"
            android:background="@color/colorMyGray_1">

            <LinearLayout
                android:id="@+id/layoutRtn_PlaceDetailsFrg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="7sp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txtIconRtn_PlaceDetailsFrg"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:gravity="center"
                    android:text="@string/fa_chevron_left"
                    android:textColor="@color/colorMyDarkBlue"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/details"
                    android:textColor="@color/colorMyGray_10"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10sp"
                android:layout_marginTop="7sp"
                android:gravity="right">

                <Button
                    android:id="@+id/btnStared_PlaceDetailsFrg"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:padding="0sp"
                    android:background="@color/colorMyGray_1"
                    android:gravity="center"
                    android:text="@string/fa_star_o"
                    android:textColor="@color/colorMyGray_9"
                    android:textSize="24sp" />

            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorMyGray_2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="19sp"
                        android:gravity="left|center"
                        android:text="Germany beer cafe"
                        android:textColor="@color/colorMyGray_10"
                        android:textSize="20sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="260sp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/raw_1505682960" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="18sp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="45sp"
                            android:layout_gravity="center"
                            android:paddingLeft="15sp"
                            android:layout_marginBottom="2px"
                            android:gravity="left|center"
                            android:text="@string/info"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="16sp"
                            android:background="@color/colorMyWhite"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="210sp"
                            android:paddingTop="20sp"
                            android:paddingLeft="15sp"
                            android:background="@color/colorMyWhite">

                            <LinearLayout
                                android:layout_width="248sp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="30sp"
                                    android:background="@color/colorMyWhite"
                                    android:gravity="left|center"
                                    android:text="KFC(Beijing)"
                                    android:textColor="@color/colorMyGray_10"
                                    android:textSize="18sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="127sp"
                                    android:layout_marginTop="10sp"
                                    android:background="@color/colorMyWhite"
                                    android:gravity="left"
                                    android:text="@string/place_detail_info_text"
                                    android:textColor="@color/colorMyGray_10"
                                    android:lineSpacingMultiplier="1.2"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/colorMyGray_6"
                                android:layout_marginTop="43sp"
                                android:layout_marginLeft="42sp"
                                android:paddingLeft="2sp">

                                <Button
                                    android:id="@+id/btnGoComments_PlaceDetailsFrg"
                                    style="@style/Widget.AppCompat.Button.Borderless"
                                    android:layout_width="45sp"
                                    android:layout_height="45sp"
                                    android:text="@string/fa_comment_o"
                                    android:textColor="@color/colorMyDarkBlue"
                                    android:textSize="24sp"
                                    android:gravity="center"
                                    android:background="@color/colorMyWhite"/>

                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutGoReviews_PlaceDetailsFrg"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_marginBottom="2px"
                        android:background="@color/colorMyWhite">

                        <TextView
                            android:id="@+id/txtMark_PlaceDetailsFrg"
                            android:layout_width="wrap_content"
                            android:layout_height="45sp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15sp"
                            android:gravity="center"
                            android:text="@string/fa_five_star"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="45sp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="6sp"
                            android:gravity="left|center"
                            android:text="4.8"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="45sp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10sp"
                            android:layout_weight="1"
                            android:gravity="right|center"
                            android:text="690 reviews"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="30sp"
                            android:layout_height="45sp"
                            android:layout_gravity="right"
                            android:gravity="center"
                            android:text="@string/fa_angle_right"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="24sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutGoMoments_PlaceDetailsFrg"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_marginBottom="39sp"
                        android:background="@color/colorMyWhite">

                        <TextView
                            android:layout_width="45sp"
                            android:layout_height="45sp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10sp"
                            android:gravity="center"
                            android:text="@string/fa_chrome"
                            android:textColor="@color/colorMyRed"
                            android:textSize="24sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="45sp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="left|center"
                            android:text="@string/moments"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="30sp"
                            android:layout_height="45sp"
                            android:layout_gravity="right"
                            android:gravity="center"
                            android:text="@string/fa_angle_right"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="24sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50sp"
                            android:layout_marginBottom="2px"
                            android:background="@color/colorMyWhite"
                            android:gravity="left|center"
                            android:paddingLeft="15sp"
                            android:text="@string/location"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="154sp"
                            android:paddingTop="20sp"
                            android:paddingLeft="15sp"
                            android:background="@color/colorMyWhite">

                            <LinearLayout
                                android:layout_width="248sp"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="30sp"
                                    android:background="@color/colorMyWhite"
                                    android:gravity="left|center"
                                    android:text="Guangzhou, China"
                                    android:textColor="@color/colorMyGray_10"
                                    android:textSize="18sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:paddingTop="5sp"
                                    android:layout_weight="1"
                                    android:background="@color/colorMyWhite"
                                    android:gravity="left"
                                    android:text="Address Info"
                                    android:textColor="@color/colorMyGray_10"
                                    android:lineSpacingMultiplier="1.2"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/colorMyGray_6"
                                android:layout_marginTop="43sp"
                                android:layout_marginLeft="42sp"
                                android:paddingLeft="2sp">

                                <Button
                                    android:id="@+id/btnGoMap_PlaceDetailsFrg"
                                    style="@style/Widget.AppCompat.Button.Borderless"
                                    android:layout_width="45sp"
                                    android:layout_height="45sp"
                                    android:text="@string/fa_map_marker"
                                    android:textColor="@color/colorMyGray_10"
                                    android:textSize="24sp"
                                    android:gravity="center"
                                    android:background="@color/colorMyWhite"/>

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</FrameLayout>
