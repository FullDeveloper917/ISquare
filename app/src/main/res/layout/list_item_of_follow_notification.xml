<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64sp"
        android:background="@color/colorMyGray_2">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="44sp"
            android:layout_height="44sp"
            android:layout_marginLeft="10sp"
            android:layout_gravity="left|center"
            android:src="@drawable/raw_1484196515"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="9sp"
            android:text="4568321"
            android:textColor="@color/colorMyGray_10"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDescription_OneFollowNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="14sp"
            android:text="Started follow you"
            android:textColor="@color/colorMyGray_10"
            android:textSize="14sp"
            android:gravity="left|center"
            android:layout_gravity="center" />

        <LinearLayout
            android:id="@+id/layoutFollowState_OneFollowNotification"
            android:layout_width="55sp"
            android:layout_height="37sp"
            android:layout_gravity="center"
            android:layout_marginRight="10sp"
            android:background="@drawable/red_button_border">

            <TextView
                android:id="@+id/txtFollowState_OneFollowNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5sp"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/colorMyWhite"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/txtIconUser_OneFollowNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5sp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/fa_user"
                android:textColor="@color/colorMyWhite"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>