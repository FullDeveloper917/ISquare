<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.david.isquare.Fragments.MeFragments.SettingsFragments.ChangePasswordFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorMyGray_2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58sp"
            android:background="@color/colorMyGray_1"
            android:layout_marginBottom="1sp">

            <LinearLayout
                android:id="@+id/layoutRtn_ChangePasswordFrg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="7sp">

                <TextView
                    android:id="@+id/txtIconRtn_ChangePasswordFrg"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:gravity="center"
                    android:text="@string/fa_chevron_left"
                    android:textColor="@color/colorMyDarkBlue"
                    android:textSize="24sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/password"
                    android:textColor="@color/colorMyGray_10"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10sp"
                android:layout_marginTop="9sp">

                <Button
                    android:id="@+id/btnSave_ChangePasswordFrg"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:background="@color/colorMyGray_1"
                    android:text="@string/fa_floppy_o"
                    android:textColor="@color/colorMyRed"
                    android:textSize="24sp"
                    android:gravity="center"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14sp"
            android:orientation="vertical"
            android:background="@color/colorMyGray_2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:background="@color/colorMyWhite"
                android:layout_marginTop="2px">

                <TextView
                    android:id="@+id/txtIconYourPassword_ChangePasswordFrg"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="8sp"
                    android:layout_marginBottom="7sp"
                    android:text="@string/fa_key"
                    android:textColor="@color/colorMyGray_4"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:background="@color/colorMyWhite"/>

                <EditText
                    android:id="@+id/edtYourPassword_ChangePasswordFrg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="30sp"
                    android:layout_marginTop="15sp"
                    android:layout_marginBottom="15sp"
                    android:background="@color/colorMyWhite"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="5sp"
                    android:hint="@string/your_password"
                    android:textColor="@color/colorMyGray_10"
                    android:textColorHint="@color/colorMyGray_7"
                    android:textSize="16sp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorMyGray_2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:background="@color/colorMyWhite"
                android:layout_marginTop="2px">

                <TextView
                    android:id="@+id/txtIconNewPassword_ChangePasswordFrg"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="8sp"
                    android:layout_marginBottom="7sp"
                    android:text="@string/fa_key"
                    android:textColor="@color/colorMyGray_4"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:background="@color/colorMyWhite"/>

                <EditText
                    android:id="@+id/edtNewPassword_ChangePasswordFrg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="30sp"
                    android:layout_marginTop="15sp"
                    android:layout_marginBottom="15sp"
                    android:background="@color/colorMyWhite"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="5sp"
                    android:hint="@string/new_password"
                    android:textColor="@color/colorMyGray_10"
                    android:textColorHint="@color/colorMyGray_7"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_marginTop="2px"
                android:background="@color/colorMyWhite">

                <TextView
                    android:id="@+id/txtIconConfirmPassword_ChangePasswordFrg"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:layout_marginBottom="7sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="8sp"
                    android:background="@color/colorMyWhite"
                    android:gravity="center"
                    android:text="@string/fa_key"
                    android:textColor="@color/colorMyGray_4"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/edtConfirmPassword_ChangePasswordFrg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15sp"
                    android:layout_marginRight="30sp"
                    android:layout_marginTop="15sp"
                    android:background="@color/colorMyWhite"
                    android:gravity="left|center_vertical"
                    android:hint="@string/confirm_password"
                    android:paddingLeft="5sp"
                    android:textColor="@color/colorMyGray_10"
                    android:textColorHint="@color/colorMyGray_7"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>
