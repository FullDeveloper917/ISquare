<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10sp"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/layoutMain_ChatVoiceReceiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgReceiver_ChatVoiceReceiver"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/chat_member" />

        <TextView
            android:id="@+id/txtMessage_ChatVoiceReceiver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:background="@drawable/chat_bubble_receiver"
            android:gravity="left|center"
            android:paddingBottom="10sp"
            android:paddingLeft="20sp"
            android:paddingRight="10sp"
            android:paddingTop="10sp"
            android:text="Voice"
            android:textColor="@color/colorMyBlack"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/txtIconVoice_ChatVoiceReceiver"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginTop="10sp"
            android:text="@string/fa_volume_up"
            android:textColor="@color/colorMyGray_10"
            android:rotation="180"
            android:textSize="24sp"
            android:gravity="center"/>

    </LinearLayout>


</LinearLayout>