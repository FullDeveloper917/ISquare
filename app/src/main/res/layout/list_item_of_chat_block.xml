<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorMyWhite"
    android:paddingTop="20sp"
    android:paddingLeft="20dp"
    android:paddingRight="10sp"
    android:paddingBottom="20sp"
    android:id="@+id/layoutChatBlock_OneChatBlock"
    android:layout_width="match_parent"
    android:layout_height="105sp">

    <RelativeLayout
        android:layout_width="65sp"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:src="@drawable/user_photo_sample"/>
        
        <TextView
            android:id="@+id/txtIsLocked_OneChatBlock"
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="-7sp"
            android:layout_marginBottom="-12sp"
            android:text="@string/fa_lock"
            android:textColor="@color/colorMyRed"
            android:textSize="24sp"
            android:gravity="center"/>
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="15sp"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="38sp"
            android:text="Denis Baks"
            android:textColor="@color/colorMyGray_10"
            android:textSize="18sp"
            android:gravity="left|center"
            android:layout_gravity="right"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="27sp"
            android:text="Hello. How are you?...."
            android:textColor="@color/colorMyGray_10"
            android:textSize="14sp"
            android:gravity="left|center"
            android:layout_marginTop="-6sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="59sp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtIsGrouped_OneChatBlock"
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:layout_gravity="right"
            android:layout_marginTop="-7sp"
            android:gravity="center"
            android:text="@string/fa_users"
            android:textColor="@color/colorMyGray_4"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="27sp"
            android:layout_marginTop="-6sp"
            android:gravity="left|center"
            android:text="18:34"
            android:textColor="@color/colorMyGray_10"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>