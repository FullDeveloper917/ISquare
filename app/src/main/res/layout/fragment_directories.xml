<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.david.isquare.Fragments.DirectoriesFragments.DirectoriesFragment">

    <LinearLayout
        android:id="@+id/layoutMain_DirectoriesFrg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58sp"
            android:background="@color/colorMyGray_1"
            android:layout_marginBottom="1sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="7sp">

                <TextView
                    android:id="@+id/txtIconShop_DirectoriesFrg"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:gravity="center"
                    android:text="@string/fa_home"
                    android:textColor="@color/colorMyRed"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/directories"
                    android:textColor="@color/colorMyGray_10"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10sp"
                android:layout_marginTop="7sp"
                android:gravity="right">

                <Button
                    android:id="@+id/btnStar_DirectoriesFrg"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:background="@color/colorMyGray_1"
                    android:gravity="center"
                    android:text="@string/fa_star"
                    android:textColor="@color/colorMyGray_9"
                    android:textSize="24sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="@color/colorMyGray_9"
            android:paddingTop="1px"
            android:paddingBottom="1px"
            android:layout_marginBottom="1sp">

            <LinearLayout
                android:id="@+id/layoutFirstMenuButton_DirectoriesFrg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorMyWhite"
                android:layout_marginRight="1px"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="40sp"
                    android:layout_height="match_parent"
                    android:background="@color/colorMyWhite"
                    android:gravity="center"
                    android:text="@string/fa_align_justify"
                    android:textColor="@color/colorMyRed"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorMyWhite"
                    android:gravity="center"
                    android:text="@string/all"
                    android:textColor="@color/colorMyGray_10"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtSlaveIconAll_DirectoriesFrg"
                    android:layout_width="30sp"
                    android:layout_height="match_parent"
                    android:background="@color/colorMyWhite"
                    android:gravity="bottom|center"
                    android:rotation="315"
                    android:text="@string/fa_sort_desc"
                    android:textColor="@color/colorMyDarkBlue"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutSecondMenuButton_DirectoriesFrg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorMyWhite"
                android:layout_marginRight="1px"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txtMainIconCity_DirectoriesFrg"
                    android:layout_width="40sp"
                    android:layout_height="match_parent"
                    android:background="@color/colorMyWhite"
                    android:gravity="center"
                    android:text="@string/fa_map_marker"
                    android:textColor="@color/colorMyRed"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorMyWhite"
                    android:gravity="center"
                    android:text="@string/city"
                    android:textColor="@color/colorMyGray_10"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtSlaveIconCity_DirectoriesFrg"
                    android:layout_width="30sp"
                    android:layout_height="match_parent"
                    android:background="@color/colorMyWhite"
                    android:gravity="bottom|center"
                    android:rotation="315"
                    android:text="@string/fa_sort_desc"
                    android:textColor="@color/colorMyDarkBlue"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutThirdMenuButton_DirectoriesFrg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorMyWhite"
                android:layout_marginRight="1px"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txtMainIconPrice_DirectoriesFrg"
                    android:layout_width="40sp"
                    android:layout_height="match_parent"
                    android:background="@color/colorMyWhite"
                    android:gravity="center"
                    android:text="@string/fa_sort_amount_asc"
                    android:textColor="@color/colorMyRed"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorMyWhite"
                    android:gravity="center"
                    android:text="@string/reviews"
                    android:textColor="@color/colorMyGray_10"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtSlaveIconReviews_DirectoriesFrg"
                    android:layout_width="25sp"
                    android:layout_height="match_parent"
                    android:background="@color/colorMyWhite"
                    android:gravity="bottom|center"
                    android:rotation="315"
                    android:text="@string/fa_sort_desc"
                    android:textColor="@color/colorMyDarkBlue"
                    android:textSize="24sp" />

            </LinearLayout>

        </LinearLayout>

        <android.support.v4.widget.DrawerLayout
            android:id="@+id/drawerLayoutFirst_DirectoriesFrg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorMyGray_2"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="201sp"
                        android:layout_marginTop="15sp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/shop_logo_1" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="201sp"
                        android:layout_marginTop="15sp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/shop_logo_2" />

                    <com.example.david.isquare.CustomizedViews.ExpandedListView
                        android:id="@+id/listPlaces_DirectoriesFrg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorMyWhite" />

                </LinearLayout>

            </ScrollView>

            <LinearLayout
                android:id="@+id/layoutFirstMenu_DirectoriesFrg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start">

                <LinearLayout
                    android:id="@+id/layoutFirstMenuMainMenu_DirectoriesFrg"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/colorMyGray_9"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/layoutMenuAllCatalogue_DirectoriesFrg"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_margin="1px"
                        android:background="@color/colorMyWhite">

                        <TextView
                            android:id="@+id/txtMenuIconAllCatalogue_DirectoriesFrg"
                            android:layout_width="40sp"
                            android:layout_height="match_parent"
                            android:background="@color/colorMyWhite"
                            android:gravity="center"
                            android:text="@string/fa_align_justify"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorMyWhite"
                            android:gravity="left|center"
                            android:text="@string/all_catalogue"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutMenuDishes_DirectoriesFrg"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_margin="1px"
                        android:background="@color/colorMyGray_5">

                        <TextView
                            android:layout_width="40sp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/fa_cutlery"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="left|center"
                            android:text="@string/shops"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="40sp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/fa_angle_right"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutMenuHotels_DirectoriesFrg"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_margin="1px"
                        android:background="@color/colorMyWhite">

                        <TextView
                            android:layout_width="40sp"
                            android:layout_height="match_parent"
                            android:background="@color/colorMyWhite"
                            android:gravity="center"
                            android:text="@string/fa_building_o"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorMyWhite"
                            android:gravity="left|center"
                            android:text="@string/hotels"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="40sp"
                            android:layout_height="match_parent"
                            android:background="@color/colorMyWhite"
                            android:gravity="center"
                            android:text="@string/fa_angle_right"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutMenuMovies_DirectoriesFrg"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_margin="1px"
                        android:background="@color/colorMyWhite">

                        <TextView
                            android:layout_width="40sp"
                            android:layout_height="match_parent"
                            android:background="@color/colorMyWhite"
                            android:gravity="center"
                            android:text="@string/fa_film"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorMyWhite"
                            android:gravity="left|center"
                            android:text="@string/cafes"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutMenuAmusement_DirectoriesFrg"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_margin="1px"
                        android:background="@color/colorMyWhite">

                        <TextView
                            android:layout_width="40sp"
                            android:layout_height="match_parent"
                            android:background="@color/colorMyWhite"
                            android:gravity="center"
                            android:text="@string/fa_glass"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorMyWhite"
                            android:gravity="left|center"
                            android:text="@string/clubs_and_bars"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="40sp"
                            android:layout_height="match_parent"
                            android:background="@color/colorMyWhite"
                            android:gravity="center"
                            android:text="@string/fa_angle_right"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutMenuLife_DirectoriesFrg"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_margin="1px"
                        android:background="@color/colorMyWhite">

                        <TextView
                            android:layout_width="40sp"
                            android:layout_height="match_parent"
                            android:background="@color/colorMyWhite"
                            android:gravity="center"
                            android:text="@string/fa_suitcase"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorMyWhite"
                            android:gravity="left|center"
                            android:text="@string/life"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="40sp"
                            android:layout_height="match_parent"
                            android:background="@color/colorMyWhite"
                            android:gravity="center"
                            android:text="@string/fa_angle_right"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutMenuSPA_DirectoriesFrg"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_margin="1px"
                        android:background="@color/colorMyWhite">

                        <TextView
                            android:layout_width="40sp"
                            android:layout_height="match_parent"
                            android:background="@color/colorMyWhite"
                            android:gravity="center"
                            android:text="@string/fa_female"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorMyWhite"
                            android:gravity="left|center"
                            android:text="@string/spa"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="40sp"
                            android:layout_height="match_parent"
                            android:background="@color/colorMyWhite"
                            android:gravity="center"
                            android:text="@string/fa_angle_right"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutMenuTravel_DirectoriesFrg"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_margin="1px"
                        android:background="@color/colorMyWhite">

                        <TextView
                            android:layout_width="40sp"
                            android:layout_height="match_parent"
                            android:background="@color/colorMyWhite"
                            android:gravity="center"
                            android:text="@string/fa_plane"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorMyWhite"
                            android:gravity="left|center"
                            android:text="@string/travel"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="40sp"
                            android:layout_height="match_parent"
                            android:background="@color/colorMyWhite"
                            android:gravity="center"
                            android:text="@string/fa_angle_right"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutMenuLocalShop_DirectoriesFrg"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_margin="1px"
                        android:background="@color/colorMyWhite">

                        <TextView
                            android:layout_width="40sp"
                            android:layout_height="match_parent"
                            android:background="@color/colorMyWhite"
                            android:gravity="center"
                            android:text="@string/fa_shopping_cart"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorMyWhite"
                            android:gravity="left|center"
                            android:text="@string/local_shop"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="40sp"
                            android:layout_height="match_parent"
                            android:background="@color/colorMyWhite"
                            android:gravity="center"
                            android:text="@string/fa_angle_right"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="18sp" />

                    </LinearLayout>

                </LinearLayout>

                <ListView
                    android:id="@+id/listSubMenu_DirectoriesFrg"
                    android:layout_width="0sp"
                    android:layout_height="455sp"
                    android:layout_weight="1"
                    android:divider="@null"
                    android:background="@color/colorMyGray_5"/>

            </LinearLayout>
        </android.support.v4.widget.DrawerLayout>


    </LinearLayout>

</FrameLayout>
