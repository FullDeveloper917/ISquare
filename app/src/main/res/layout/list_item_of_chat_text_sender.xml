<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10sp"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/layoutMain_ChatTextSender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="50sp"
            android:layout_height="50sp"/>

        <TextView
            android:id="@+id/txtMessage_ChatTextSender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:text="Tooltip"
            android:textColor="@color/colorMyBlack"
            android:textSize="14sp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:paddingRight="20sp"
            android:paddingLeft="10sp"
            android:gravity="left|center"
            android:background="@drawable/chat_bubble_sender"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgSender_ChatTextSender"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/chat_member"/>

    </LinearLayout>


</LinearLayout>