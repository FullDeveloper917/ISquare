<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutOneAddress_OneAddress"
    android:layout_width="match_parent"
    android:layout_height="119sp"
    android:background="@color/colorMyWhite">
    
    <TextView
        android:id="@+id/txtIconAddress_OneAddress"
        android:layout_width="45sp"
        android:layout_height="45sp"
        android:text="@string/fa_map_marker"
        android:textColor="@color/colorMyGray_10"
        android:textSize="26sp"
        android:gravity="center"
        android:layout_marginTop="9sp"
        android:layout_marginLeft="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="-5sp"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_marginTop="12sp"
            android:gravity="left"
            android:text="Unit 201, 2/F, Block A, Kerry TC Warehouse 1, 3 Kin Chuen Street, Kwai Chung, Hong Kong"
            android:textColor="@color/colorMyGray_10"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:layout_marginTop="18sp"
            android:gravity="left"
            android:text="852 - 23457856, Denis"
            android:textColor="@color/colorMyGray_10"
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnEdit_OneAddress"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="45sp"
        android:layout_height="45sp"
        android:background="@color/colorMyWhite"
        android:text="@string/fa_pencil_square_o"
        android:textColor="@color/colorMyGray_10"
        android:textSize="26sp"
        android:gravity="center"
        android:layout_marginRight="10sp"
        android:layout_marginTop="45sp"/>
</LinearLayout>