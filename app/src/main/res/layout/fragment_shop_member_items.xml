<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.david.isquare.Fragments.ShopFragments.ShopMemberItemsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58sp"
            android:layout_marginBottom="20px"
            android:background="@color/colorMyGray_1">

            <LinearLayout
                android:id="@+id/layoutRtn_ShopMemberItemsFrg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="7sp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txtIconRtn_ShopMemberItemsFrg"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:gravity="center"
                    android:text="@string/fa_chevron_left"
                    android:textColor="@color/colorMyDarkBlue"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Den Baks"
                    android:textColor="@color/colorMyGray_10"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="105sp"
                    android:background="@color/colorMyGray_5"
                    android:paddingTop="20sp"
                    android:paddingLeft="20dp"
                    android:paddingRight="10sp"
                    android:paddingBottom="20sp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="65sp"
                        android:layout_height="match_parent"
                        android:src="@drawable/user_photo_sample"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15sp"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="38sp"
                            android:text="Den Baks"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="18sp"
                            android:gravity="left|center"
                            android:layout_gravity="right"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="27sp"
                            android:text="ID: 8520000786"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="14sp"
                            android:gravity="left|center"
                            android:layout_marginTop="-6sp"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnGoComments_ShopMemberItemsFrg"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="45sp"
                        android:layout_height="45sp"
                        android:text="@string/fa_comment_o"
                        android:textSize="24sp"
                        android:textColor="@color/colorMyDarkBlue"
                        android:gravity="center"
                        android:padding="0sp"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <com.example.david.isquare.CustomizedViews.ExpandedListView
                    android:id="@+id/listShops_ShopMemberItemsFrg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorMyWhite"/>
            </LinearLayout>

        </ScrollView>


    </LinearLayout>

</FrameLayout>
