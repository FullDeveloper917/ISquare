<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorMyGray_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/colorMyGray_7"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="105sp"
        android:background="@color/colorMyGray_5"
        android:layout_marginTop="25sp"
        android:paddingTop="20sp"
        android:paddingLeft="20dp"
        android:paddingRight="15sp"
        android:paddingBottom="20sp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="65sp"
            android:layout_height="match_parent"
            android:src="@drawable/user_photo_sample"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="15sp"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="38sp"
                android:text="Denis Baks"
                android:textColor="@color/colorMyGray_10"
                android:textSize="18sp"
                android:gravity="left|center"
                android:layout_gravity="right"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="27sp"
                android:text="ID: 8520000786"
                android:textColor="@color/colorMyGray_10"
                android:textSize="14sp"
                android:gravity="left|center"
                android:layout_marginTop="-6sp"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@color/colorMyWhite"
        android:text="Interesting book"
        android:textColor="@color/colorMyGray_10"
        android:textSize="16sp"
        android:paddingLeft="15sp"
        android:layout_marginBottom="2px"
        android:gravity="left|center"/>

    <TextView
        android:id="@+id/txtStarMark_OneReview"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@color/colorMyWhite"
        android:text="@string/fa_five_star"
        android:textColor="@color/colorMyGray_10"
        android:textSize="16sp"
        android:paddingLeft="15sp"
        android:layout_marginBottom="2px"
        android:gravity="left|center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="245sp"
        android:orientation="vertical"
        android:background="@color/colorMyWhite"
        android:paddingLeft="10sp"
        android:paddingTop="15sp"
        android:paddingRight="10sp">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:text="I bought this as a gift for my mother who wanted a every day perfume. She loved it . I am thinking about buying it for myself. It's soft but not weak, it's everything but bland and boring but still not even close to too much."
            android:textColor="@color/colorMyGray_10"
            android:textSize="16sp"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorMyWhite"
            android:layout_marginTop="20sp">

            <ImageView
                android:layout_width="90sp"
                android:layout_height="90sp"
                android:layout_marginRight="10sp"
                android:src="@drawable/fake_image"/>

            <ImageView
                android:layout_width="90sp"
                android:layout_height="90sp"
                android:layout_marginRight="10sp"
                android:src="@drawable/fake_image"/>

            <ImageView
                android:layout_width="90sp"
                android:layout_height="90sp"
                android:layout_marginRight="10sp"
                android:src="@drawable/fake_image"/>
        </LinearLayout>
        
    </LinearLayout>
</LinearLayout>