<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/colorMyGray_4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.david.isquare.SignInActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@color/colorMyGray_1">

        <LinearLayout
            android:id="@+id/layoutRtn_SignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="7sp">

            <TextView
                android:id="@+id/txtIconRtn_SignIn"
                android:layout_width="45sp"
                android:layout_height="45sp"
                android:gravity="center"
                android:text="@string/fa_chevron_left"
                android:textColor="@color/colorMyDarkBlue"
                android:textSize="24sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/sign_in"
                android:textColor="@color/colorMyGray_10"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:background="@color/colorMyWhite"
            android:layout_marginTop="2px">

            <TextView
                android:id="@+id/txtIconMyId_SignIn"
                android:layout_width="45sp"
                android:layout_height="45sp"
                android:layout_marginLeft="26sp"
                android:layout_marginTop="8sp"
                android:layout_marginBottom="7sp"
                android:text="@string/fa_globe"
                android:textColor="@color/colorMyGray_6"
                android:textSize="24sp"
                android:gravity="center"
                android:background="@color/colorMyWhite"/>

            <EditText
                android:id="@+id/edtMyId_SignIn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="30sp"
                android:layout_marginTop="15sp"
                android:layout_marginBottom="15sp"
                android:background="@color/colorMyWhite"
                android:paddingLeft="5sp"
                android:hint="@string/my_id"
                android:textColor="@color/colorMyGray_10"
                android:textColorHint="@color/colorMyGray_7"
                android:textSize="16sp"
                android:gravity="left|center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:background="@color/colorMyWhite"
            android:layout_marginTop="2px">

            <TextView
                android:id="@+id/txtIconPassword_SignIn"
                android:layout_width="45sp"
                android:layout_height="45sp"
                android:layout_marginLeft="26sp"
                android:layout_marginTop="8sp"
                android:layout_marginBottom="7sp"
                android:text="@string/fa_key"
                android:textColor="@color/colorMyGray_6"
                android:textSize="24sp"
                android:gravity="center"
                android:background="@color/colorMyWhite"/>

            <EditText
                android:id="@+id/edtPassword_SignIn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="30sp"
                android:layout_marginTop="15sp"
                android:layout_marginBottom="15sp"
                android:background="@color/colorMyWhite"
                android:paddingLeft="5sp"
                android:hint="@string/password"
                android:textColor="@color/colorMyGray_10"
                android:textColorHint="@color/colorMyGray_7"
                android:textSize="16sp"
                android:gravity="left|center"/>
        </LinearLayout>

    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnSignIn_SignIn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:layout_marginBottom="19dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="@string/sign_in"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/red_button_border"
            android:textColor="@color/colorMyWhite"/>
    </android.support.constraint.ConstraintLayout>




</LinearLayout>
