<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.david.isquare.Fragments.ChatsFragments.GroupChatFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMyGray_2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58sp"
            android:layout_marginBottom="1sp"
            android:background="@color/colorMyGray_1">

            <LinearLayout
                android:id="@+id/layoutRtn_GroupChatFrg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="7sp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txtIconRtn_GroupChatFrg"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:gravity="center"
                    android:text="@string/fa_chevron_left"
                    android:textColor="@color/colorMyDarkBlue"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="@string/group"
                    android:textColor="@color/colorMyGray_10"
                    android:textSize="20sp" />

            </LinearLayout>

            <Button
                android:id="@+id/btnMembers_GroupChatFrg"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="45sp"
                android:layout_height="45sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/fa_users"
                android:textColor="@color/colorMyGray_9"
                android:textSize="24sp"
                android:padding="0sp"/>

            <Button
                android:id="@+id/btnSetting_GroupChatFrg"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="45sp"
                android:layout_height="45sp"
                android:layout_marginRight="15sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/fa_cog"
                android:textColor="@color/colorMyGray_9"
                android:textSize="24sp"
                android:padding="0sp"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/listChats_GroupChatFrg"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:background="@color/colorMyGray_2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorMyGray_5"
                android:layout_alignParentBottom="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="63sp"
                    android:paddingBottom="9sp"
                    android:paddingTop="9sp"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp" >

                    <TextView
                        android:id="@+id/txtIconMessage_GroupChatFrg"
                        android:layout_width="45sp"
                        android:layout_height="45sp"
                        android:background="@drawable/message_input_left_border"
                        android:gravity="center"
                        android:text="@string/fa_smile_o"
                        android:textColor="@color/colorMyGray_10"
                        android:textSize="24sp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="45sp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:background="@color/colorMyWhite"
                        android:gravity="left|center"
                        android:hint="@string/type_a_message"
                        android:textColor="@color/colorMyGray_10"
                        android:textColorHint="@color/colorMyGray_7"
                        android:textSize="14sp"
                        android:padding="5sp" />

                    <Button
                        android:id="@+id/btnAdd_GroupChatFrg"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="45sp"
                        android:layout_height="45sp"
                        android:background="@drawable/message_input_right_border"
                        android:gravity="center"
                        android:text="@string/fa_plus"
                        android:textColor="@color/colorMyGray_9"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/btnInputVoice_GroupChatFrg"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="45sp"
                        android:layout_height="45sp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5sp"
                        android:background="@drawable/red_circle_button_border"
                        android:text="@string/fa_volume_up"
                        android:textColor="@color/colorMyWhite"
                        android:textSize="24sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutAddContents_GroupChatFrg"
                    android:layout_width="match_parent"
                    android:layout_height="201sp"
                    android:orientation="vertical"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginBottom="9sp"
                    android:visibility="gone"
                    android:background="@drawable/white_view_background">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_marginLeft="25sp"
                        android:layout_marginRight="24sp"
                        android:layout_marginTop="12sp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:id="@+id/layoutAlbum_GroupChatFrg"
                            android:layout_width="0sp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="18sp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtIconAlbum_GroupChatFrg"
                                android:layout_width="match_parent"
                                android:layout_height="60sp"
                                android:background="@drawable/gray_4_view_background"
                                android:gravity="center"
                                android:text="@string/fa_picture_o"
                                android:textColor="@color/colorMyGray_6"
                                android:textSize="24sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="23sp"
                                android:layout_gravity="center"
                                android:layout_marginTop="3sp"
                                android:gravity="center"
                                android:text="@string/album"
                                android:textColor="@color/colorMyGray_10"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layoutContact_GroupChatFrg"
                            android:layout_width="0sp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="18sp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtIconContact_GroupChatFrg"
                                android:layout_width="match_parent"
                                android:layout_height="60sp"
                                android:background="@drawable/gray_4_view_background"
                                android:gravity="center"
                                android:text="@string/fa_user"
                                android:textColor="@color/colorMyGray_6"
                                android:textSize="24sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="23sp"
                                android:layout_gravity="center"
                                android:layout_marginTop="3sp"
                                android:gravity="center"
                                android:text="@string/contact"
                                android:textColor="@color/colorMyGray_10"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layoutItem_GroupChatFrg"
                            android:layout_width="0sp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="18sp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtIconItem_GroupChatFrg"
                                android:layout_width="match_parent"
                                android:layout_height="60sp"
                                android:background="@drawable/gray_4_view_background"
                                android:gravity="center"
                                android:text="@string/fa_shopping_bag"
                                android:textColor="@color/colorMyGray_6"
                                android:textSize="24sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="23sp"
                                android:layout_gravity="center"
                                android:layout_marginTop="3sp"
                                android:gravity="center"
                                android:text="@string/item"
                                android:textColor="@color/colorMyGray_10"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layoutPlace_GroupChatFrg"
                            android:layout_width="0sp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtIconPlace_GroupChatFrg"
                                android:layout_width="match_parent"
                                android:layout_height="60sp"
                                android:background="@drawable/gray_4_view_background"
                                android:gravity="center"
                                android:text="@string/fa_university"
                                android:textColor="@color/colorMyGray_6"
                                android:textSize="24sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="23sp"
                                android:layout_gravity="center"
                                android:layout_marginTop="3sp"
                                android:gravity="center"
                                android:text="@string/place"
                                android:textColor="@color/colorMyGray_10"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutTransfer_GroupChatFrg"
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_marginLeft="25sp"
                        android:layout_marginRight="24sp"
                        android:layout_weight="1"
                        android:weightSum="4">

                        <LinearLayout
                            android:layout_width="0sp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="18sp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtIconTransfer_GroupChatFrg"
                                android:layout_width="match_parent"
                                android:layout_height="60sp"
                                android:text="@string/fa_exchange"
                                android:textColor="@color/colorMyGray_6"
                                android:textSize="24sp"
                                android:gravity="center"
                                android:background="@drawable/gray_4_view_background"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="23sp"
                                android:layout_marginTop="3sp"
                                android:text="@string/transfer"
                                android:textColor="@color/colorMyGray_10"
                                android:textSize="14sp"
                                android:layout_gravity="center"
                                android:gravity="center"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layoutCall_GroupChatFrg"
                            android:layout_width="0sp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="18sp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtIconCall_GroupChatFrg"
                                android:layout_width="match_parent"
                                android:layout_height="60sp"
                                android:background="@drawable/gray_4_view_background"
                                android:gravity="center"
                                android:text="@string/fa_phone"
                                android:textColor="@color/colorMyGray_6"
                                android:textSize="24sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="23sp"
                                android:layout_marginTop="3sp"
                                android:text="@string/call"
                                android:textColor="@color/colorMyGray_10"
                                android:textSize="14sp"
                                android:layout_gravity="center"
                                android:gravity="center"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0sp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="18sp"
                            android:orientation="vertical"/>

                        <LinearLayout
                            android:layout_width="0sp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>



    </LinearLayout>

</FrameLayout>
