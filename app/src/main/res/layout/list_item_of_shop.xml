<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorMyWhite"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layoutOneShop_OneShop"
        android:layout_width="match_parent"
        android:layout_height="115sp"
        android:padding="10sp">

        <ImageView
            android:id="@+id/imgShop_OneShop"
            android:layout_width="95sp"
            android:layout_height="match_parent"
            android:background="@color/colorMyGray_7"
            android:src="@drawable/fake_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10sp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="XXXXtitles"
                    android:textColor="@color/colorMyBlack"
                    android:textSize="16sp"
                    android:gravity="left|center"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/btnStart_OneShop"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:layout_marginLeft="-6sp"
                    android:textColor="@color/colorMyRed"
                    android:textSize="24sp"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txtMark_OneShop"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/fa_five_star"
                    android:textColor="@color/colorMyBlack"
                    android:textSize="18sp"
                    android:gravity="left|center"/>

                <TextView
                    android:id="@+id/txtComments_OneShop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="1021 comments"
                    android:textColor="@color/colorMyBlack"
                    android:textSize="16sp"
                    android:gravity="left|center"
                    android:paddingLeft="10sp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Hong Kong, Stenley"
                    android:textColor="@color/colorMyBlack"
                    android:textSize="14sp"
                    android:lines="1"
                    android:gravity="left|center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="HK$ 345"
                    android:textColor="@color/colorMyBlack"
                    android:textSize="16sp"
                    android:gravity="right|center"
                    android:paddingLeft="10sp"
                    android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>