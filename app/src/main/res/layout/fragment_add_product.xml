<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.david.isquare.Fragments.MeFragments.MyShopFragments.ProductsFragements.AddProductFragment">

    <LinearLayout
        android:id="@+id/layoutMain_AddProductFrg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58sp"
            android:layout_marginBottom="1sp"
            android:background="@color/colorMyGray_1">

            <LinearLayout
                android:id="@+id/layoutRtn_AddProductFrg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="7sp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txtIconRtn_AddProductFrg"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:gravity="center"
                    android:text="@string/fa_chevron_left"
                    android:textColor="@color/colorMyDarkBlue"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/item_details"
                    android:textColor="@color/colorMyGray_10"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorMyGray_2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorMyGray_2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="71sp"
                        android:gravity="left|center"
                        android:paddingLeft="20sp"
                        android:paddingTop="26sp"
                        android:text="@string/condition"
                        android:textColor="@color/colorMyGray_10"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60sp"
                        android:background="@color/colorMyWhite"
                        android:paddingBottom="7sp"
                        android:paddingLeft="20sp"
                        android:paddingRight="31sp"
                        android:paddingTop="8sp">

                        <TextView
                            android:id="@+id/txtIconNew_AddProductFrg"
                            android:layout_width="45sp"
                            android:layout_height="45sp"
                            android:gravity="center"
                            android:text="@string/fa_thumbs_o_up"
                            android:textColor="@color/colorMyRed"
                            android:textSize="24sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="9sp"
                            android:layout_weight="1"
                            android:gravity="left|center"
                            android:text="@string/string_new"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="18sp" />

                        <RadioButton
                            android:id="@+id/rdbNew_AddProductFrg"
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:layout_gravity="center" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60sp"
                        android:layout_marginTop="2px"
                        android:background="@color/colorMyWhite"
                        android:paddingBottom="7sp"
                        android:paddingLeft="20sp"
                        android:paddingRight="31sp"
                        android:paddingTop="8sp">

                        <TextView
                            android:id="@+id/txtIconSecondHand_AddProductFrg"
                            android:layout_width="45sp"
                            android:layout_height="45sp"
                            android:gravity="center"
                            android:text="@string/fa_handshake_o"
                            android:textColor="@color/colorMyDarkBlue"
                            android:textSize="24sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="9sp"
                            android:layout_weight="1"
                            android:gravity="left|center"
                            android:text="@string/second_hand"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="18sp" />

                        <RadioButton
                            android:id="@+id/rdbSecondHand_AddProductFrg"
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:layout_gravity="center" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorMyGray_2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="71sp"
                        android:gravity="left|center"
                        android:paddingLeft="20sp"
                        android:paddingTop="26sp"
                        android:text="@string/choose_category_and_sub_category"
                        android:textColor="@color/colorMyGray_10"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60sp"
                        android:background="@color/colorMyWhite"
                        android:paddingLeft="30sp"
                        android:paddingRight="30sp">

                        <Spinner
                            android:id="@+id/spnCategory_AddProductFrg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorMyWhite"
                            android:entries="@array/product_category_array"
                            android:paddingLeft="5sp"
                            android:textColor="@color/colorMyGray_4"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@color/colorMyWhite"
                            android:gravity="center"
                            android:text="@string/fa_caret_down"
                            android:textColor="@color/colorMyGray_6"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60sp"
                        android:layout_marginTop="2px"
                        android:background="@color/colorMyWhite"
                        android:paddingLeft="30sp"
                        android:paddingRight="30sp">

                        <Spinner
                            android:id="@+id/spnSubCategory_AddProductFrg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorMyWhite"
                            android:entries="@array/product_sub_category_array"
                            android:paddingLeft="5sp"
                            android:textColor="@color/colorMyGray_4"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@color/colorMyWhite"
                            android:gravity="center"
                            android:text="@string/fa_caret_down"
                            android:textColor="@color/colorMyGray_6"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorMyGray_2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="71sp"
                        android:gravity="left|center"
                        android:paddingLeft="20sp"
                        android:paddingTop="26sp"
                        android:text="@string/main_image"
                        android:textColor="@color/colorMyGray_10"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/imgMainImage_AddProductFrg"
                        android:layout_width="match_parent"
                        android:layout_height="224sp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/fake_image" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorMyGray_2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="71sp"
                        android:gravity="left|center"
                        android:paddingLeft="20sp"
                        android:paddingTop="26sp"
                        android:text="@string/info"
                        android:textColor="@color/colorMyGray_10"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60sp"
                        android:layout_marginBottom="2px"
                        android:background="@color/colorMyWhite"
                        android:paddingLeft="30sp"
                        android:paddingRight="30sp">

                        <Spinner
                            android:id="@+id/spnCondition_AddProductFrg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorMyWhite"
                            android:entries="@array/product_condition_array"
                            android:paddingLeft="5sp"
                            android:textColor="@color/colorMyGray_4"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@color/colorMyWhite"
                            android:gravity="center"
                            android:text="@string/fa_caret_down"
                            android:textColor="@color/colorMyGray_6"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60sp"
                        android:layout_marginBottom="2px"
                        android:background="@color/colorMyWhite"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/edtName_AddProductFrg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="15sp"
                            android:layout_marginLeft="31dp"
                            android:layout_marginRight="31sp"
                            android:layout_marginTop="15sp"
                            android:background="@color/colorMyWhite"
                            android:hint="@string/name"
                            android:paddingLeft="5sp"
                            android:textColor="@color/colorMyGray_10"
                            android:textColorHint="@color/colorMyGray_7"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="153sp"
                        android:background="@color/colorMyWhite"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/edtDescription_AddProductFrg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="15sp"
                            android:layout_marginLeft="31dp"
                            android:layout_marginRight="31sp"
                            android:layout_marginTop="15sp"
                            android:background="@color/colorMyWhite"
                            android:gravity="left"
                            android:hint="@string/description"
                            android:paddingLeft="5sp"
                            android:textColor="@color/colorMyGray_10"
                            android:textColorHint="@color/colorMyGray_7"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorMyGray_2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="71sp"
                        android:gravity="left|center"
                        android:paddingLeft="20sp"
                        android:paddingTop="26sp"
                        android:text="@string/image_1"
                        android:textColor="@color/colorMyGray_10"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/imgFirstImage_AddProductFrg"
                        android:layout_width="match_parent"
                        android:layout_height="224sp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/fake_image" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorMyGray_2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="71sp"
                        android:gravity="left|center"
                        android:paddingLeft="20sp"
                        android:paddingTop="26sp"
                        android:text="@string/image_2"
                        android:textColor="@color/colorMyGray_10"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/imgSecondImage_AddProductFrg"
                        android:layout_width="match_parent"
                        android:layout_height="224sp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/fake_image" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorMyGray_2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="71sp"
                        android:gravity="left|center"
                        android:paddingLeft="20sp"
                        android:paddingTop="26sp"
                        android:text="@string/info_2"
                        android:textColor="@color/colorMyGray_10"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60sp"
                        android:layout_marginBottom="2px"
                        android:background="@color/colorMyWhite">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="15sp"
                            android:layout_marginLeft="31dp"
                            android:layout_marginRight="31sp"
                            android:layout_marginTop="15sp"
                            android:background="@color/colorMyWhite"
                            android:hint="@string/title"
                            android:paddingLeft="5sp"
                            android:textColor="@color/colorMyGray_10"
                            android:textColorHint="@color/colorMyGray_7"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="153sp"
                        android:background="@color/colorMyWhite">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="15sp"
                            android:layout_marginLeft="31dp"
                            android:layout_marginRight="31sp"
                            android:layout_marginTop="15sp"
                            android:background="@color/colorMyWhite"
                            android:gravity="left"
                            android:hint="@string/text"
                            android:paddingLeft="5sp"
                            android:textColor="@color/colorMyGray_10"
                            android:textColorHint="@color/colorMyGray_7"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorMyGray_2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="71sp"
                        android:gravity="left|center"
                        android:paddingLeft="20sp"
                        android:paddingTop="26sp"
                        android:text="@string/quantity_and_price"
                        android:textColor="@color/colorMyGray_10"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60sp"
                        android:layout_marginBottom="2px"
                        android:background="@color/colorMyWhite">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="15sp"
                            android:layout_marginLeft="31dp"
                            android:layout_marginRight="31sp"
                            android:layout_marginTop="15sp"
                            android:background="@color/colorMyWhite"
                            android:hint="@string/quantity"
                            android:paddingLeft="5sp"
                            android:textColor="@color/colorMyGray_10"
                            android:textColorHint="@color/colorMyGray_7"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60sp"
                        android:layout_marginBottom="2px"
                        android:background="@color/colorMyWhite"
                        android:paddingLeft="30sp"
                        android:paddingRight="30sp">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorMyWhite"
                            android:hint="@string/price"
                            android:paddingLeft="5sp"
                            android:textColor="@color/colorMyGray_10"
                            android:textColorHint="@color/colorMyGray_7"
                            android:textSize="16sp" />

                        <Spinner
                            android:id="@+id/spinner"
                            android:layout_width="70sp"
                            android:layout_height="match_parent"
                            android:background="@color/colorMyWhite"
                            android:entries="@array/currency_array"
                            android:paddingLeft="5sp"
                            android:textColor="@color/colorMyGray_4"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@color/colorMyWhite"
                            android:gravity="center"
                            android:text="@string/fa_caret_down"
                            android:textColor="@color/colorMyGray_6"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="80sp"
                    android:layout_marginBottom="38sp"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginTop="11sp"
                    android:lineSpacingMultiplier="1.1"
                    android:text="@string/add_product_description"
                    android:textColor="@color/colorMyGray_10"
                    android:textSize="16sp" />

                <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/btnAddItem_AddProductFrg"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="51dp"
                        android:layout_marginBottom="50dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginLeft="15sp"
                        android:layout_marginRight="15sp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="38sp"
                        android:background="@drawable/red_button_border"
                        android:text="@string/add_item"
                        android:textColor="@color/colorMyWhite"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent" />

                </android.support.constraint.ConstraintLayout>
            </LinearLayout>

        </ScrollView>


    </LinearLayout>


</FrameLayout>
