<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.david.isquare.Fragments.MeFragments.MyCartFragments.CheckOutFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="@color/colorMyGray_1">

            <LinearLayout
                android:id="@+id/layoutRtn_CheckOutFrg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="7sp">

                <TextView
                    android:id="@+id/txtIconRtn_CheckOutFrg"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:gravity="center"
                    android:text="@string/fa_chevron_left"
                    android:textColor="@color/colorMyDarkBlue"
                    android:textSize="24sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/payment_and_address"
                    android:textColor="@color/colorMyGray_10"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorMyGray_2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="280sp"
                    android:layout_height="45sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="4sp"
                    android:layout_marginBottom="5sp"
                    android:gravity="left|center"
                    android:text="@string/address"
                    android:textColor="@color/colorMyGray_10"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="119sp"
                    android:background="@color/colorMyWhite">

                    <TextView
                        android:id="@+id/txtIconAddress_CheckOutFrg"
                        android:layout_width="45sp"
                        android:layout_height="45sp"
                        android:layout_marginLeft="20sp"
                        android:layout_marginTop="8sp"
                        android:background="@color/colorMyWhite"
                        android:gravity="center"
                        android:text="@string/fa_map_marker"
                        android:textColor="@color/colorMyGray_10"
                        android:textSize="24sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12sp"
                            android:background="@color/colorMyWhite"
                            android:gravity="left"
                            android:text="Unit 201, 2/F, Block A, Kerry TC Warehouse 1, 3 Kin Chuen Street, Kwai Chung, Hong Kong"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="18sp"
                            android:layout_gravity="bottom"
                            android:background="@color/colorMyWhite"
                            android:gravity="center"
                            android:text="852 - 23457856, Denis"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnChangeAddress_CheckOutFrg"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="45sp"
                        android:layout_height="45sp"
                        android:layout_marginBottom="9sp"
                        android:layout_marginRight="10sp"
                        android:layout_gravity="bottom"
                        android:background="@color/colorMyWhite"
                        android:gravity="center"
                        android:text="@string/fa_external_link"
                        android:textColor="@color/colorMyGray_10"
                        android:textColorHint="@color/colorMyGray_7"
                        android:textSize="26sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="280sp"
                    android:layout_height="45sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="21sp"
                    android:layout_marginBottom="5sp"
                    android:gravity="left|center"
                    android:text="@string/payment_method"
                    android:textColor="@color/colorMyGray_10"
                    android:textSize="18sp"/>


                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="311sp"
                    android:background="@color/colorMyWhite"
                    android:paddingLeft="15sp"
                    android:paddingTop="5sp">

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:text="Balance (HK$ 550)"
                        android:background="@color/colorMyWhite"
                        android:textColor="@color/colorMyGray_10"
                        android:textSize="16sp"
                        android:paddingLeft="10sp"
                        android:gravity="left|center"/>

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:text="Visa, Master card"
                        android:background="@color/colorMyWhite"
                        android:textColor="@color/colorMyGray_10"
                        android:textSize="16sp"
                        android:paddingLeft="10sp"
                        android:gravity="left|center"/>

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:text="WeChat"
                        android:background="@color/colorMyWhite"
                        android:textColor="@color/colorMyGray_10"
                        android:textSize="16sp"
                        android:paddingLeft="10sp"
                        android:gravity="left|center"/>

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:text="Alipay"
                        android:background="@color/colorMyWhite"
                        android:textColor="@color/colorMyGray_10"
                        android:textSize="16sp"
                        android:paddingLeft="10sp"
                        android:gravity="left|center"/>

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:text="Paypal"
                        android:background="@color/colorMyWhite"
                        android:textColor="@color/colorMyGray_10"
                        android:textSize="16sp"
                        android:paddingLeft="10sp"
                        android:gravity="left|center"/>

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:text="Union Pay"
                        android:background="@color/colorMyWhite"
                        android:textColor="@color/colorMyGray_10"
                        android:textSize="16sp"
                        android:paddingLeft="10sp"
                        android:gravity="left|center"/>

                </RadioGroup>

                <Button
                    android:id="@+id/btnCheckOut_CheckOutFrg"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:layout_marginTop="24sp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="25sp"
                    android:text="@string/check_out"
                    android:background="@drawable/red_button_border"
                    android:textColor="@color/colorMyWhite"
                    android:textSize="16sp"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>
