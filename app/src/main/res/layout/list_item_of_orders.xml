<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutEntire_OneOrder"
    android:layout_width="match_parent"
    android:background="@color/colorMyWhite"
    android:layout_height="116sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="20sp"
        android:paddingTop="19dp"
        android:paddingBottom="19sp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="#45678 | 2 items"
                android:textColor="@color/colorMyBlack"
                android:textSize="16sp"
                android:gravity="left|center"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="12/05/2017"
                android:textColor="@color/colorMyBlack"
                android:textSize="16sp"
                android:gravity="left|center"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <View
                    android:layout_width="149sp"
                    android:layout_height="2px"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="2sp"
                    android:background="@color/colorMyGray_7"/>
            </LinearLayout>

            <TextView
                android:id="@+id/txtStatus_OneOrder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Status: Ready for pick up"
                android:textColor="@color/colorMyBlack"
                android:textSize="16sp"
                android:gravity="left|center"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="62sp"
        android:layout_height="match_parent"
        android:layout_marginTop="19sp"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="7sp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:text="HK$ 900"
            android:textColor="@color/colorMyBlack"
            android:textSize="16sp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/txtIconStatus_OneOrder"
            android:background="@color/colorMyWhite"
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:text="@string/fa_child"
            android:textColor="@color/colorMyRed"
            android:textSize="28sp"
            android:layout_gravity="right|bottom"
            android:gravity="center"/>

    </LinearLayout>
</LinearLayout>