<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutMain_SignUp"
    android:orientation="vertical"
    android:background="@color/colorMyGray_4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.david.isquare.SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@color/colorMyGray_1">

        <LinearLayout
            android:id="@+id/layoutRtn_SignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="7sp">

            <TextView
                android:id="@+id/txtIconRtn_SignUp"
                android:layout_width="45sp"
                android:layout_height="45sp"
                android:gravity="center"
                android:text="@string/fa_chevron_left"
                android:textColor="@color/colorMyDarkBlue"
                android:textSize="24sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/sign_up"
                android:textColor="@color/colorMyGray_10"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_marginTop="2px"
                android:background="@color/colorMyWhite">

                <TextView
                    android:id="@+id/txtIconRegion_SignUp"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:layout_marginLeft="20sp"
                    android:background="@color/colorMyWhite"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="@string/fa_globe"
                    android:textColor="@color/colorMyGray_4"
                    android:textSize="24sp" />

                <Spinner
                    android:id="@+id/spnRegion_SignUp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorMyWhite"
                    android:entries="@array/region_array"
                    android:paddingLeft="5sp"
                    android:textColor="@color/colorMyGray_4"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="30sp"
                    android:background="@color/colorMyWhite"
                    android:gravity="center"
                    android:text="@string/fa_caret_down"
                    android:textColor="@color/colorMyGray_6"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_marginTop="2px"
                android:background="@color/colorMyWhite">

                <TextView
                    android:id="@+id/txtIconPartnerId_SignUp"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:layout_marginBottom="7sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="8sp"
                    android:background="@color/colorMyWhite"
                    android:gravity="center"
                    android:text="@string/fa_users"
                    android:textColor="@color/colorMyGray_4"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/edtPartnerId_SignUp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15sp"
                    android:layout_marginRight="30sp"
                    android:layout_marginTop="15sp"
                    android:background="@color/colorMyWhite"
                    android:gravity="left|center_vertical"
                    android:hint="@string/partner_id"
                    android:paddingLeft="5sp"
                    android:textColor="@color/colorMyGray_10"
                    android:textColorHint="@color/colorMyGray_7"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_marginTop="2px"
                android:background="@color/colorMyWhite">

                <TextView
                    android:id="@+id/txtIconGivenName_SignUp"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:layout_marginBottom="7sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="8sp"
                    android:background="@color/colorMyWhite"
                    android:gravity="center"
                    android:text="@string/fa_info"
                    android:textColor="@color/colorMyGray_4"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/edtGivenName_SignUp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15sp"
                    android:layout_marginRight="30sp"
                    android:layout_marginTop="15sp"
                    android:background="@color/colorMyWhite"
                    android:gravity="left|center_vertical"
                    android:hint="@string/given_name"
                    android:paddingLeft="5sp"
                    android:textColor="@color/colorMyGray_10"
                    android:textColorHint="@color/colorMyGray_7"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_marginTop="2px"
                android:background="@color/colorMyWhite">

                <TextView
                    android:id="@+id/txtIconFamilyName_SignUp"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:layout_marginBottom="7sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="8sp"
                    android:background="@color/colorMyWhite"
                    android:gravity="center"
                    android:text="@string/fa_info"
                    android:textColor="@color/colorMyGray_4"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/edtFamilyName_SignUp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15sp"
                    android:layout_marginRight="30sp"
                    android:layout_marginTop="15sp"
                    android:background="@color/colorMyWhite"
                    android:gravity="left|center_vertical"
                    android:hint="@string/family_name"
                    android:paddingLeft="5sp"
                    android:textColor="@color/colorMyGray_10"
                    android:textColorHint="@color/colorMyGray_7"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_marginTop="2px"
                android:background="@color/colorMyWhite">

                <TextView
                    android:id="@+id/txtIconEmail_SignUp"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:layout_marginBottom="7sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="8sp"
                    android:background="@color/colorMyWhite"
                    android:gravity="center"
                    android:text="@string/fa_envelope_o"
                    android:textColor="@color/colorMyGray_4"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/edtEmail_SignUp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15sp"
                    android:layout_marginRight="30sp"
                    android:layout_marginTop="15sp"
                    android:background="@color/colorMyWhite"
                    android:gravity="left|center_vertical"
                    android:hint="@string/email"
                    android:paddingLeft="5sp"
                    android:textColor="@color/colorMyGray_10"
                    android:textColorHint="@color/colorMyGray_7"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2px"
                android:background="@color/colorMyWhite">

                <TextView
                    android:id="@+id/txtIconPhoneNumber_SignUp"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:layout_marginBottom="7sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="8sp"
                    android:background="@color/colorMyWhite"
                    android:gravity="center"
                    android:text="@string/fa_mobile"
                    android:textColor="@color/colorMyGray_4"
                    android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="76sp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="30sp">

                    <Spinner
                        android:id="@+id/spnPhoneNumber_SignUp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/colorMyWhite"
                        android:entries="@array/phone_number_array"
                        android:paddingLeft="5sp"
                        android:textColor="@color/colorMyGray_4"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/colorMyWhite"
                        android:gravity="center"
                        android:text="@string/fa_caret_down"
                        android:textColor="@color/colorMyGray_6"
                        android:textSize="14sp" />

                </LinearLayout>


                <EditText
                    android:id="@+id/edtPhoneNumber_SignUp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15sp"
                    android:layout_marginRight="30sp"
                    android:layout_marginTop="15sp"
                    android:background="@color/colorMyWhite"
                    android:gravity="left|center_vertical"
                    android:hint="@string/phone_number"
                    android:paddingLeft="5sp"
                    android:textColor="@color/colorMyGray_10"
                    android:textColorHint="@color/colorMyGray_7"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2px"
                android:background="@color/colorMyWhite">

                <TextView
                    android:id="@+id/txtIconPassword_SignUp"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:layout_marginBottom="7sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="8sp"
                    android:background="@color/colorMyWhite"
                    android:gravity="center"
                    android:text="@string/fa_key"
                    android:textColor="@color/colorMyGray_4"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/edtPassword_SignUp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15sp"
                    android:layout_marginRight="30sp"
                    android:layout_marginTop="15sp"
                    android:background="@color/colorMyWhite"
                    android:gravity="left|center_vertical"
                    android:hint="@string/password"
                    android:paddingLeft="5sp"
                    android:textColor="@color/colorMyGray_10"
                    android:textColorHint="@color/colorMyGray_7"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_marginTop="2px"
                android:background="@color/colorMyWhite">

                <TextView
                    android:id="@+id/txtIconConfirmPassword_SignUp"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:layout_marginBottom="7sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="8sp"
                    android:background="@color/colorMyWhite"
                    android:gravity="center"
                    android:text="@string/fa_key"
                    android:textColor="@color/colorMyGray_4"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/edtConfirmPassword_SignUp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15sp"
                    android:layout_marginRight="30sp"
                    android:layout_marginTop="15sp"
                    android:background="@color/colorMyWhite"
                    android:gravity="left|center_vertical"
                    android:hint="@string/confirm_password"
                    android:paddingLeft="5sp"
                    android:textColor="@color/colorMyGray_10"
                    android:textColorHint="@color/colorMyGray_7"
                    android:textSize="16sp" />
            </LinearLayout>


            <Button
                android:id="@+id/btnSignUp_SignUp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="13sp"
                android:layout_marginBottom="19dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="@string/sign_up"
                android:background="@drawable/blue_button_border"
                android:textColor="@color/colorMyWhite"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>

