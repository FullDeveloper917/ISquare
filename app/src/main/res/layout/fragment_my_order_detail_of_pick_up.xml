<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.david.isquare.Fragments.MeFragments.MyOrdersFragments.MyOrderDetailOfPickUpFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58sp"
            android:layout_marginBottom="1sp"
            android:background="@color/colorMyGray_1">

            <LinearLayout
                android:id="@+id/layoutRtn_MyOrderDetailOfPickUpFrg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="7sp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txtIconRtn_MyOrderDetailOfPickUpFrg"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:gravity="center"
                    android:text="@string/fa_chevron_left"
                    android:textColor="@color/colorMyDarkBlue"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/order_details"
                    android:textColor="@color/colorMyGray_10"
                    android:textSize="20sp" />
            </LinearLayout>


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorMyGray_2"
                android:orientation="vertical">

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="116sp"
                    android:layout_marginTop="2px"
                    android:background="@color/colorMyWhite">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingBottom="19sp"
                        android:paddingLeft="20sp"
                        android:paddingTop="19dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="left|center"
                                android:text="#45678 | 2 items"
                                android:textColor="@color/colorMyBlack"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="left|center"
                                android:text="12/05/2017"
                                android:textColor="@color/colorMyBlack"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <View
                                    android:layout_width="149sp"
                                    android:layout_height="2px"
                                    android:layout_gravity="bottom"
                                    android:layout_marginBottom="2sp"
                                    android:background="@color/colorMyGray_7" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/txtStatus_OneOrder"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="left|center"
                                android:text="Status: Ready for pick up"
                                android:textColor="@color/colorMyBlack"
                                android:textSize="16sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="62sp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="7sp"
                        android:layout_marginRight="10sp"
                        android:layout_marginTop="19sp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20sp"
                            android:layout_weight="1"
                            android:text="HK$ 900"
                            android:textColor="@color/colorMyBlack"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txtIconStatus_MyOrderDetailOfPickUpFrg"
                            android:layout_width="45sp"
                            android:layout_height="45sp"
                            android:layout_gravity="right|bottom"
                            android:background="@color/colorMyWhite"
                            android:gravity="center"
                            android:text="@string/fa_child"
                            android:textColor="@color/colorMyRed"
                            android:textSize="28sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120sp"
                    android:layout_marginTop="2px"
                    android:background="@color/colorMyWhite"
                    android:padding="10sp">

                    <ImageView
                        android:layout_width="120sp"
                        android:layout_height="match_parent"
                        android:background="@color/colorMyGray_7"
                        android:src="@drawable/fake_image" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingLeft="10sp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20sp"
                            android:gravity="left|center"
                            android:text="Armelle #102"
                            android:textColor="@color/colorMyBlack"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="20sp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="left|center"
                                android:text="Quantity: 1"
                                android:textColor="@color/colorMyBlack"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="62sp"
                                android:layout_height="match_parent"
                                android:gravity="left|center"
                                android:text="HK$ 900"
                                android:textColor="@color/colorMyBlack"
                                android:textSize="16sp" />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120sp"
                    android:layout_marginTop="2px"
                    android:background="@color/colorMyWhite"
                    android:padding="10sp">

                    <ImageView
                        android:layout_width="120sp"
                        android:layout_height="match_parent"
                        android:background="@color/colorMyGray_7"
                        android:src="@drawable/fake_image" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingLeft="10sp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20sp"
                            android:gravity="left|center"
                            android:text="Armelle #102"
                            android:textColor="@color/colorMyBlack"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="20sp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="left|center"
                                android:text="Quantity: 1"
                                android:textColor="@color/colorMyBlack"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="62sp"
                                android:layout_height="match_parent"
                                android:gravity="left|center"
                                android:text="HK$ 900"
                                android:textColor="@color/colorMyBlack"
                                android:textSize="16sp" />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="116sp"
                    android:layout_marginTop="2px"
                    android:background="@color/colorMyWhite"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="10sp"
                    android:paddingTop="19sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20sp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="@string/subtotal"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="HK$ 1800"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20sp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="@string/pick_up"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Free"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="149sp"
                        android:layout_height="1px"
                        android:layout_marginBottom="10sp"
                        android:layout_marginTop="10sp"
                        android:background="@color/colorMyGray_10" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20sp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="@string/total"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="HK$ 1800"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="16sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="132sp"
                    android:layout_marginBottom="26sp"
                    android:layout_marginTop="2px"
                    android:background="@color/colorMyWhite"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="10sp"
                    android:paddingTop="19sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20sp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="@string/address_where_you_can_pick_up_all_items"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="16sp" />

                    </LinearLayout>


                    <View
                        android:layout_width="149sp"
                        android:layout_height="1px"
                        android:layout_marginBottom="24sp"
                        android:layout_marginTop="10sp"
                        android:background="@color/colorMyGray_10" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40sp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="Room 1003-5, 10/F, Phase One, Modern Terminals, Berth One, Kwai Chung, New Territories, Hong Kong"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/btnPickedUp_MyOrderDetailOfPickUpFrg"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/blue_button_border"
                    android:text="@string/i_picked_up"
                    android:textColor="@color/colorMyWhite" />

            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</FrameLayout>
