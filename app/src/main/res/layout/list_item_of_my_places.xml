<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="115sp"
    android:id="@+id/layoutMain_OneMyPlace"
    android:background="@color/colorMyWhite"
    android:padding="10sp">

    <ImageView
        android:id="@+id/imgPlace_OneMyPlace"
        android:layout_width="95sp"
        android:layout_height="match_parent"
        android:background="@color/colorMyGray_7"
        android:src="@drawable/fake_image"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10sp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="XXXXtitles"
            android:textColor="@color/colorMyBlack"
            android:textSize="16sp"
            android:gravity="left|center"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/txtFiveStar_OneMyPlace"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/fa_five_star"
            android:textColor="@color/colorMyBlack"
            android:textSize="18sp"
            android:gravity="left|bottom"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1021 comments"
                android:textColor="@color/colorMyBlack"
                android:textSize="14sp"
                android:lines="1"
                android:gravity="left|center"/>

            <Button
                android:id="@+id/btnEdit_OneMyPlace"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="45sp"
                android:layout_height="45sp"
                android:background="@color/colorMyWhite"
                android:text="@string/fa_pencil_square_o"
                android:textColor="@color/colorMyBlack"
                android:textSize="28sp"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>