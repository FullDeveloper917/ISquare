<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.david.isquare.Fragments.ShopFragments.ShopDetailsReviewFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58sp"
            android:layout_marginBottom="1sp"
            android:background="@color/colorMyGray_1">

            <LinearLayout
                android:id="@+id/layoutRtn_ShopDetailsReviewFrg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="7sp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txtIconRtn_ShopDetailsReviewFrg"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:gravity="center"
                    android:text="@string/fa_chevron_left"
                    android:textColor="@color/colorMyDarkBlue"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/details"
                    android:textColor="@color/colorMyGray_10"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10sp"
                android:layout_marginTop="7sp"
                android:gravity="right">

                <Button
                    android:id="@+id/btnGoCart_ShopDetailsReviewFrg"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:background="@color/colorMyGray_1"
                    android:gravity="center"
                    android:text="@string/fa_shopping_cart"
                    android:textColor="@color/colorMyGray_9"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btnGoStared_ShopDetailsReviewFrg"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:background="@color/colorMyGray_1"
                    android:gravity="center"
                    android:text="@string/fa_star"
                    android:textColor="@color/colorMyGray_9"
                    android:textSize="24sp" />

            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorMyGray_2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="19sp"
                        android:gravity="left|center"
                        android:text="Armelle #052"
                        android:textColor="@color/colorMyGray_10"
                        android:textSize="20sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="260sp"
                        android:layout_marginBottom="16sp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/shop_detail_first_sample_image" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100sp"
                        android:layout_marginBottom="2px"
                        android:background="@color/colorMyWhite">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="match_parent"
                                android:layout_height="0sp"
                                android:layout_marginLeft="10sp"
                                android:layout_weight="1"
                                android:gravity="left|bottom"
                                android:text="HK$ 345"
                                android:textColor="@color/colorMyGray_10"
                                android:textSize="24sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0sp"
                                android:layout_marginLeft="10sp"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/txtIconAddress_ShopDetailsReviewFrg"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="@string/fa_map_marker"
                                    android:textColor="@color/colorMyGray_10"
                                    android:textSize="18sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="5sp"
                                    android:gravity="left|center"
                                    android:text="Hong Kong, Stenley"
                                    android:textColor="@color/colorMyGray_10"
                                    android:textSize="12sp" />

                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/txtIconStared_ShopDetailsReviewFrg"
                            android:layout_width="45sp"
                            android:layout_height="45sp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10sp"
                            android:gravity="center"
                            android:text="@string/fa_star_o"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/txtIconAddCart_ShopDetailsReviewFrg"
                            android:layout_width="45sp"
                            android:layout_height="45sp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10sp"
                            android:gravity="center"
                            android:text="@string/fa_cart_plus"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="24sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutReviewDetails_ShopDetailsReviewFrg"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:background="@color/colorMyWhite"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/txtIconDetailInfo_ShopDetailsReviewFrg"
                            android:layout_width="45sp"
                            android:layout_height="45sp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15sp"
                            android:gravity="center"
                            android:text="@string/fa_info_circle"
                            android:textColor="@color/colorMyRed"
                            android:textSize="24sp" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="45sp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10sp"
                            android:gravity="right|center"
                            android:text="@string/details"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txtIconGoDetails_ShopDetailsReviewFrg"
                            android:layout_width="30sp"
                            android:layout_height="45sp"
                            android:layout_gravity="right"
                            android:gravity="center"
                            android:text="@string/fa_angle_right"
                            android:textColor="@color/colorMyRed"
                            android:textSize="24sp" />
                    </LinearLayout>

                    <com.example.david.isquare.CustomizedViews.ExpandedListView
                        android:id="@+id/listReviews_ShopDetailsReviewFrg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</FrameLayout>
