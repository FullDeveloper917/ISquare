<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.david.isquare.Fragments.ChatsFragments.GroupChatAddMembersFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58sp"
            android:layout_marginBottom="1sp"
            android:background="@color/colorMyGray_1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="7sp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btnRtn_GroupChatAddMembersFrg"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:gravity="center"
                    android:text="@string/fa_chevron_left"
                    android:textColor="@color/colorMyDarkBlue"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="@string/add_members"
                    android:textColor="@color/colorMyGray_10"
                    android:textSize="20sp" />
                
                <Button
                    android:id="@+id/btnNext_GroupChatAddMembersFrg"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:layout_marginRight="10sp"
                    android:text="@string/fa_chevron_right"
                    android:textColor="@color/colorMyRed"
                    android:textSize="24sp"
                    android:padding="0sp"
                    android:layout_gravity="center"
                    android:gravity="center"/>
                
            </LinearLayout>            

        </LinearLayout>

        <ListView
            android:id="@+id/listMembers_GroupChatAddMembersFrg"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>

</FrameLayout>
