<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutOneProduct_OneAdminProduct"
    android:layout_width="match_parent"
    android:layout_height="115sp"
    android:background="@color/colorMyWhite"
    android:padding="10sp">

    <ImageView
        android:layout_width="95sp"
        android:layout_height="95sp"
        android:background="@color/colorMyGray_7"
        android:src="@drawable/fake_image"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10sp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="XXXtitles"
                android:textColor="@color/colorMyBlack"
                android:textSize="16sp"
                android:gravity="left|center"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/txtName_OneAdminPlaces"
                        android:layout_width="match_parent"
                        android:layout_height="25sp"
                        android:text="Anna Klein"
                        android:textColor="@color/colorMyBlack"
                        android:textSize="14sp"
                        android:gravity="left|center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25sp"
                        android:layout_marginTop="-5sp"
                        android:text="Hong Kong, Stenley"
                        android:textColor="@color/colorMyBlack"
                        android:textSize="14sp"
                        android:gravity="left|center" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="70sp"
                    android:layout_height="match_parent">
                    
                    <TextView
                        android:id="@+id/txtChecked_OneAdminPlaces"
                        android:layout_width="45sp"
                        android:layout_height="45sp"
                        android:text="@string/fa_check_circle_o"
                        android:textColor="@color/colorMyDarkBlue"
                        android:textSize="24sp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:gravity="center"/>

                    <Button
                        android:id="@+id/btnAccept_OneAdminPlaces"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="70sp"
                        android:layout_height="26sp"
                        android:padding="0sp"
                        android:background="@drawable/red_button_border"
                        android:text="@string/accept"
                        android:textColor="@color/colorMyWhite"
                        android:textSize="12sp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:gravity="center"/>
                    
                </RelativeLayout>
                
            </LinearLayout>



        </LinearLayout>
    </LinearLayout>

</LinearLayout>