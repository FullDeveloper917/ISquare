<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorMyGray_2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="105sp"
        android:background="@color/colorMyGray_5"
        android:layout_marginTop="21sp"
        android:paddingTop="20sp"
        android:paddingLeft="20dp"
        android:paddingRight="15sp"
        android:paddingBottom="20sp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="65sp"
            android:layout_height="match_parent"
            android:src="@drawable/user_photo_sample"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="15sp"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="38sp"
                android:text="Anna Klein"
                android:textColor="@color/colorMyGray_10"
                android:textSize="18sp"
                android:gravity="left|center"
                android:layout_gravity="right"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="27sp"
                android:text="Hong Kong, Shatin/Delivery"
                android:textColor="@color/colorMyGray_10"
                android:textSize="14sp"
                android:gravity="left|center"
                android:layout_marginTop="-6sp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>