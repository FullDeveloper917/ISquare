<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.david.isquare.Fragments.ShopFragments.ShopDetailsNewFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58sp"
            android:layout_marginBottom="1sp"
            android:background="@color/colorMyGray_1">

            <LinearLayout
                android:id="@+id/layoutRtn_ShopDetailsNewFrg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="7sp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txtIconRtn_ShopDetailsNewFrg"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:gravity="center"
                    android:text="@string/fa_chevron_left"
                    android:textColor="@color/colorMyDarkBlue"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/details"
                    android:textColor="@color/colorMyGray_10"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10sp"
                android:layout_marginTop="7sp"
                android:gravity="right">

                <Button
                    android:id="@+id/btnGoCart_ShopDetailsNewFrg"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:background="@color/colorMyGray_1"
                    android:gravity="center"
                    android:text="@string/fa_shopping_cart"
                    android:textColor="@color/colorMyGray_9"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btnGoStared_ShopDetailsNewFrg"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:background="@color/colorMyGray_1"
                    android:gravity="center"
                    android:text="@string/fa_star"
                    android:textColor="@color/colorMyGray_9"
                    android:textSize="24sp" />

            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorMyGray_2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="19sp"
                        android:gravity="left|center"
                        android:text="Armelle #052"
                        android:textColor="@color/colorMyGray_10"
                        android:textSize="20sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="260sp"
                        android:layout_marginBottom="16sp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/shop_detail_first_sample_image" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100sp"
                        android:layout_marginBottom="2px"
                        android:background="@color/colorMyWhite">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="match_parent"
                                android:layout_height="0sp"
                                android:layout_marginLeft="10sp"
                                android:layout_weight="1"
                                android:gravity="left|bottom"
                                android:text="HK$ 345"
                                android:textColor="@color/colorMyGray_10"
                                android:textSize="24sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0sp"
                                android:layout_marginLeft="10sp"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/txtIconAddress_ShopDetailsNewFrg"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="@string/fa_map_marker"
                                    android:textColor="@color/colorMyGray_10"
                                    android:textSize="18sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="5sp"
                                    android:gravity="left|center"
                                    android:text="Hong Kong, Stenley"
                                    android:textColor="@color/colorMyGray_10"
                                    android:textSize="12sp" />

                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/txtIconStared_ShopDetailsNewFrg"
                            android:layout_width="45sp"
                            android:layout_height="45sp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10sp"
                            android:gravity="center"
                            android:text="@string/fa_star_o"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/txtIconAddCart_ShopDetailsNewFrg"
                            android:layout_width="45sp"
                            android:layout_height="45sp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10sp"
                            android:gravity="center"
                            android:text="@string/fa_cart_plus"
                            android:textColor="@color/colorMyGray_10"
                            android:textSize="24sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/layoutGoDetails_ShopDetailsNewFrg"
                            android:layout_width="match_parent"
                            android:layout_height="50sp"
                            android:layout_marginBottom="2px"
                            android:background="@color/colorMyWhite">

                            <TextView
                                android:id="@+id/txtMark_ShopDetailsNewFrg"
                                android:layout_width="wrap_content"
                                android:layout_height="45sp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="15sp"
                                android:gravity="center"
                                android:text="@string/fa_five_star"
                                android:textColor="@color/colorMyGray_10"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="45sp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="6sp"
                                android:gravity="left|center"
                                android:text="4.8"
                                android:textColor="@color/colorMyGray_10"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="45sp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10sp"
                                android:layout_weight="1"
                                android:gravity="right|center"
                                android:text="690 reviews"
                                android:textColor="@color/colorMyGray_10"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/txtIconGoReview_ShopDetailsNewFrg"
                                android:layout_width="30sp"
                                android:layout_height="45sp"
                                android:layout_gravity="right"
                                android:gravity="center"
                                android:text="@string/fa_angle_right"
                                android:textColor="@color/colorMyGray_10"
                                android:textSize="24sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50sp"
                            android:layout_marginBottom="39sp"
                            android:background="@color/colorMyWhite">

                            <TextView
                                android:id="@+id/txtIconNew_ShopDetailsNewFrg"
                                style="@style/Widget.AppCompat.Button.Borderless"
                                android:layout_width="45sp"
                                android:layout_height="45sp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10sp"
                                android:gravity="center"
                                android:text="@string/fa_thumbs_o_up"
                                android:textColor="@color/colorMyRed"
                                android:textSize="24sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="45sp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="9sp"
                                android:gravity="left|center"
                                android:text="@string/string_new"
                                android:textColor="@color/colorMyGray_10"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="33sp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50sp"
                                android:background="@color/colorMyWhite">

                                <TextView
                                    android:id="@+id/txtIconInfo_ShopDetailsNewFrg"
                                    style="@style/Widget.AppCompat.Button.Borderless"
                                    android:layout_width="45sp"
                                    android:layout_height="45sp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="5sp"
                                    android:gravity="center"
                                    android:text="@string/fa_info_circle"
                                    android:textColor="@color/colorMyRed"
                                    android:textSize="24sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="45sp"
                                    android:layout_gravity="center"
                                    android:gravity="left|center"
                                    android:text="@string/info"
                                    android:textColor="@color/colorMyGray_10"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="134sp"
                                android:background="@color/colorMyWhite"
                                android:gravity="left"
                                android:paddingLeft="10sp"
                                android:paddingTop="12sp"
                                android:text="@string/shop_detail_info_text"
                                android:textColor="@color/colorMyGray_10"
                                android:textSize="14sp" />


                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="270sp"
                                android:layout_marginBottom="10sp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/shop_detail_second_sample_image" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="270sp"
                                android:layout_marginBottom="27sp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/shop_detail_third_sample_image" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="50sp"
                                android:layout_marginBottom="2px"
                                android:background="@color/colorMyWhite"
                                android:gravity="left|center"
                                android:paddingLeft="15sp"
                                android:text="@string/important"
                                android:textColor="@color/colorMyGray_10"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="97sp"
                                android:background="@color/colorMyWhite"
                                android:gravity="left"
                                android:paddingLeft="10sp"
                                android:paddingTop="12sp"
                                android:text="@string/shop_detail_important_text"
                                android:textColor="@color/colorMyGray_10"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="35sp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="105sp"
                        android:background="@color/colorMyGray_5"
                        android:paddingBottom="20sp"
                        android:paddingLeft="20dp"
                        android:paddingRight="10sp"
                        android:paddingTop="20sp">

                        <LinearLayout
                            android:id="@+id/layoutGoMemberItems_ShopDetailsNewFrg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="65sp"
                                android:layout_height="match_parent"
                                android:src="@drawable/user_photo_sample" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="15sp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="38sp"
                                    android:layout_gravity="right"
                                    android:gravity="left|center"
                                    android:text="Anna Klein"
                                    android:textColor="@color/colorMyGray_10"
                                    android:textSize="18sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="27sp"
                                    android:layout_marginTop="-6sp"
                                    android:gravity="left|center"
                                    android:text="Hong Kong, Shatin/Delivery"
                                    android:textColor="@color/colorMyGray_10"
                                    android:textSize="14sp" />
                            </LinearLayout>

                        </LinearLayout>

                        <Button
                            android:id="@+id/btnGoComments_ShopDetailsNewFrg"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="45sp"
                            android:layout_height="45sp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="0sp"
                            android:text="@string/fa_comment_o"
                            android:textColor="@color/colorMyRed"
                            android:textSize="24sp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_marginBottom="2px"
                        android:background="@color/colorMyWhite"
                        android:gravity="left|center"
                        android:paddingLeft="15sp"
                        android:text="@string/delivery_info"
                        android:textColor="@color/colorMyGray_10"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="70sp"
                        android:background="@color/colorMyWhite"
                        android:gravity="left"
                        android:paddingLeft="10sp"
                        android:paddingTop="12sp"
                        android:text="@string/shop_detail_delivery_info_text"
                        android:textColor="@color/colorMyGray_10"
                        android:textSize="14sp" />

                </LinearLayout>


            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</FrameLayout>
