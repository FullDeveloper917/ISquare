<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.david.isquare.Fragments.AdminFragments.AdminDirectoriesFragments.AdminDirectoriesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58sp"
            android:layout_marginBottom="1sp"
            android:background="@color/colorMyGray_1">

            <LinearLayout
                android:id="@+id/layoutRtn_AdminDirectoriesFrg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="7sp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txtIconRtn_AdminDirectoriesFrg"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:gravity="center"
                    android:text="@string/fa_chevron_left"
                    android:textColor="@color/colorMyDarkBlue"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/directories"
                    android:textColor="@color/colorMyGray_10"
                    android:textSize="20sp" />
            </LinearLayout>


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorMyGray_2"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgFirst_AdminDirectoriesFrg"
                    android:layout_width="match_parent"
                    android:layout_height="201sp"
                    android:layout_marginBottom="10sp"
                    android:layout_marginTop="25sp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/shop_logo_1" />

                <LinearLayout
                    android:id="@+id/layoutFirstLink_AdminDirectoriesFrg"
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:layout_marginBottom="16sp"
                    android:background="@color/colorMyWhite">

                    <TextView
                        android:id="@+id/txtIconFirstLink_AdminDirectoriesFrg"
                        android:layout_width="45sp"
                        android:layout_height="45sp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20sp"
                        android:gravity="center"
                        android:text="@string/fa_link"
                        android:textColor="@color/colorMyRed"
                        android:textSize="24sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45sp"
                        android:layout_gravity="center"
                        android:gravity="left|center"
                        android:padding="5sp"
                        android:text="@string/choose_item_from_catalogs"
                        android:textColor="@color/colorMyGray_8"
                        android:textSize="14sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imgSecond_AdminDirectoriesFrg"
                    android:layout_width="match_parent"
                    android:layout_height="201sp"
                    android:layout_marginBottom="10sp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/shop_logo_2" />

                <LinearLayout
                    android:id="@+id/layoutSecondLink_AdminDirectoriesFrg"
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:layout_marginBottom="75sp
"
                    android:background="@color/colorMyWhite">

                    <TextView
                        android:id="@+id/txtIconSecondLink_AdminDirectoriesFrg"
                        android:layout_width="45sp"
                        android:layout_height="45sp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20sp"
                        android:gravity="center"
                        android:text="@string/fa_link"
                        android:textColor="@color/colorMyRed"
                        android:textSize="24sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45sp"
                        android:layout_gravity="center"
                        android:gravity="left|center"
                        android:padding="5sp"
                        android:text="@string/perfume_armelle_102"
                        android:textColor="@color/colorMyGray_8"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>
